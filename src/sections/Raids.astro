---
// Raids section to display schedule and progress
const raidSchedule = [
  { day: 'Lunes', time: '20:00 - 23:00', type: 'Progresión', difficulty: 'Heroico' },
  { day: 'Miércoles', time: '20:00 - 23:00', type: 'Progresión', difficulty: 'Heroico' },
  { day: 'Domingo', time: '19:00 - 22:00', type: 'Farmeo', difficulty: 'Normal' },
];

const raidProgress = [
  { raid: 'Castillo de Nathria', progress: '10/10 H', date: 'Última semana' },
  { raid: 'Sanctum of Domination', progress: '9/10 H', date: 'Hace 2 semanas' },
  { raid: 'Sepulcro de los Primeros', progress: '7/11 M', date: 'En progreso' },
];
---

<section id="raids" class="section py-20 bg-black/30">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-primary mb-4">Raids</h2>
      <div class="w-24 h-1 bg-primary mx-auto mb-6"></div>
      <p class="text-normal/80 max-w-2xl mx-auto">
        Nuestro horario de raids y progresión actual en el contenido de última generación.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      {/* Schedule */}
      <div class="card">
        <h3 class="text-2xl font-bold text-primary mb-6">Horario de Raids</h3>
        <div class="space-y-4">
          {raidSchedule.map((raid) => (
            <div class="flex items-start pb-4 border-b border-primary/10 last:border-0 last:pb-0">
              <div class="flex-1">
                <h4 class="font-medium text-primary">{raid.day}</h4>
                <p class="text-sm text-normal/70">{raid.time}</p>
              </div>
              <div class="text-right">
                <span class="inline-block px-2 py-1 text-xs rounded-full bg-primary/10 text-primary">
                  {raid.type}
                </span>
                <p class="text-sm text-normal/70 mt-1">{raid.difficulty}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      {/* Progress */}
      <div class="card">
        <h3 class="text-2xl font-bold text-primary mb-6">Progresión</h3>
        <div class="space-y-4">
          {raidProgress.map((progress) => (
            <div class="flex items-center justify-between pb-4 border-b border-primary/10 last:border-0 last:pb-0">
              <div>
                <h4 class="font-medium text-primary">{progress.raid}</h4>
                <p class="text-sm text-normal/70">{progress.date}</p>
              </div>
              <span class="px-3 py-1 rounded-full bg-primary/10 text-primary text-sm font-medium">
                {progress.progress}
              </span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
