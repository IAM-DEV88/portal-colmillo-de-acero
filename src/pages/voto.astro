import Layout from '../components/layout/Layout.astro';
import { getVoteStats } from '../lib/voting';
import rosterData from '../data/roster.json';

interface RosterCharacter {
  name: string;
  class: string;
  rank: string;
  publicNote: string;
  officerNote: string;
}

// Obtener par√°metros de la URL
const searchParams = Astro.url.searchParams;
const success = searchParams.get('success') === 'true';
const error = searchParams.get('error');

// Obtener estad√≠sticas de votos
interface VoteStat {
  character: string;
  count: number;
}

let voteStats: VoteStat[] = [];
let statsError: string | null = null;

// Solo ejecutar en el servidor
if (import.meta.env.SSR) {
  try {
    console.log('Obteniendo estad√≠sticas de votaci√≥n...');
    const stats = await getVoteStats();
    console.log('Resultado de getVoteStats:', stats);
    
    if (stats.success) {
      voteStats = stats.data || [];
    } else {
      statsError = stats.error || 'Error desconocido al cargar estad√≠sticas';
      console.error('Error al cargar estad√≠sticas:', statsError);
    }
  } catch (err) {
    statsError = err instanceof Error ? err.message : 'Error desconocido';
    console.error('Excepci√≥n al cargar estad√≠sticas:', err);
  }
}
