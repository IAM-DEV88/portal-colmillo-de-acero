          {successMessage && (
            <div class="mt-4 bg-green-900/50 border border-green-700 text-green-200 px-4 py-3 rounded">
              {successMessage}
            </div>
          )}
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
          <div class="bg-gray-800/50 backdrop-blur-sm py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <form class="space-y-6" method="POST">
              <div>
                <label for="password" class="block text-sm font-medium text-gray-300">
                  Contraseña de administrador
                </label>
                <div class="mt-1">
                  <input
                    id="password"
                    name="password"
                    type="password"
                    required
                    class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-amber-500 focus:border-amber-500 sm:text-sm bg-gray-900 text-white"
                  />
                </div>
              </div>

              <div>
                <button
                  type="submit"
                  class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500"
                >
                  Iniciar sesión
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </Layout>
  ) : (
    <Layout title="Admin - Gestión de Solicitudes">
      <div class="min-h-screen bg-gray-900 py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto space-y-8">
          {/* Header & Actions */}
          <div class="flex flex-col md:flex-row justify-between items-start md:items-center bg-gray-800/50 backdrop-blur-sm p-6 rounded-2xl border border-gray-700/50 shadow-xl">
            <div>
              <h1 class="text-3xl font-bold text-white mb-2">Panel de Administración</h1>
              <p class="text-gray-400">Gestiona las solicitudes de raid y el roster</p>
            </div>
            <div class="flex items-center space-x-4 mt-4 md:mt-0">
              <button
                id="toggle-all-btn"
                class="px-4 py-2 text-sm font-medium text-gray-300 hover:text-white bg-gray-700/50 hover:bg-gray-600/50 border border-gray-600/50 rounded-lg transition-all"
                onclick="const details = document.querySelectorAll('details'); const isOpen = this.dataset.open === 'true'; details.forEach(d => d.open = !isOpen); this.dataset.open = !isOpen; this.textContent = !isOpen ? 'Colapsar Todo' : 'Expandir Todo';"
                data-open="false"
              >
                Expandir Todo
              </button>
              <form method="POST" action="/api/admin/logout">
                <button
                  type="submit"
                  class="px-4 py-2 text-sm font-medium text-red-400 hover:text-white bg-red-900/20 hover:bg-red-900/40 border border-red-800/50 rounded-lg transition-all flex items-center space-x-2"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                    />
                  </svg>
                  <span>Cerrar sesión</span>
                </button>
              </form>
            </div>
          </div>

          {errorMessage && (
            <div class="bg-red-900/50 border border-red-700 text-red-200 px-4 py-3 rounded-lg flex items-center animate-fade-in">
              <svg class="w-5 h-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              {errorMessage}
            </div>
          )}

          {isLoading ? (
            <div class="flex justify-center items-center h-64">
              <div class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-amber-500" />
            </div>
          ) : (
            <>
              {/* Stats Overview */}
              <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="bg-gray-800/50 backdrop-blur-sm p-4 rounded-lg border border-gray-700/50">
                  <div class="text-gray-400 text-sm font-medium mb-1">Total Solicitudes</div>
                  <div class="text-3xl font-bold text-white">{registrations.length}</div>
                </div>
                <div class="bg-blue-900/20 backdrop-blur-sm p-4 rounded-lg border border-blue-700/30">
                  <div class="text-blue-300 text-sm font-medium mb-1">En Revisión</div>
                  <div class="text-3xl font-bold text-blue-400">
                    {registrations.filter((r) => r.status === 'en_revision').length}
                  </div>
                </div>
                <div class="bg-green-900/20 backdrop-blur-sm p-4 rounded-lg border border-green-700/30">
                  <div class="text-green-300 text-sm font-medium mb-1">Aceptados</div>
                  <div class="text-3xl font-bold text-green-400">
                    {registrations.filter((r) => r.status === 'aceptado').length}
                  </div>
                </div>
                <div class="bg-amber-900/20 backdrop-blur-sm p-4 rounded-lg border border-amber-700/30">
                  <div class="text-amber-300 text-sm font-medium mb-1">En Espera</div>
                  <div class="text-3xl font-bold text-amber-400">
                    {registrations.filter((r) => r.status === 'en_espera').length}
                  </div>
                </div>
              </div>

              {/* Raid Groups */}
              <div class="space-y-6">
                {registrations.length === 0 ? (
                  <div class="text-center py-12 bg-gray-800/30 rounded-2xl border border-gray-700/50">
                    <svg
                      class="mx-auto h-12 w-12 text-gray-500"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                      />
                    </svg>
                    <p class="mt-2 text-gray-400">No hay solicitudes para mostrar</p>
                  </div>
                ) : (
                  (() => {
                    // First group by raid_id
                    const raidGroups = new Map();
                    
                    registrations.forEach((reg) => {
                      if (!raidGroups.has(reg.raid_id)) {
                        raidGroups.set(reg.raid_id, {
                          raid_id: reg.raid_id,
                          raid_name: getRaidName(reg.raid_id),
                          schedules: new Map(),
                        });
                      }
                      
                      const raidGroup = raidGroups.get(reg.raid_id);
                      const normalizedDay = reg.day_of_week?.toLowerCase() || '';
                      const scheduleKey = `${normalizedDay}-${reg.start_time}`;
                      
                      if (!raidGroup.schedules.has(scheduleKey)) {
                        raidGroup.schedules.set(scheduleKey, {
                          day_of_week: reg.day_of_week,
                          start_time: reg.start_time,
                          registrations: [],
                        });
                      }
                      
                      raidGroup.schedules.get(scheduleKey).registrations.push(reg);
                    });

                    // Convert to arrays and sort
                    const sortedRaids = Array.from(raidGroups.values())
                      .sort((a, b) => a.raid_id - b.raid_id)
                      .map(raid => {
                        const dayOrder = { lunes: 1, martes: 2, miercoles: 3, jueves: 4, viernes: 5, sabado: 6, domingo: 7 };
                        
                        raid.schedules = Array.from(raid.schedules.values()).sort((a, b) => {
                          const dayA = a.day_of_week?.toLowerCase() || '';
                          const dayB = b.day_of_week?.toLowerCase() || '';
                          const dayDiff = (dayOrder[dayA] || 8) - (dayOrder[dayB] || 8);
                          if (dayDiff !== 0) return dayDiff;
                          return (a.start_time || '').localeCompare(b.start_time || '');
                        });
                        
                        return raid;
                      });

                    return sortedRaids.map((raid) => {
                      const totalRegistrations = raid.schedules.reduce((sum, s) => sum + s.registrations.length, 0);
                      const totalPending = raid.schedules.reduce((sum, s) => 
                        sum + s.registrations.filter(r => r.status === 'en_revision').length, 0
                      );
                      const eligibleCount = raidEligibleMembers[raid.raid_id]?.length || 0;

                      return (
                        <details class="group raid-group bg-gray-800/40 backdrop-blur-sm rounded-lg border border-gray-700/50 overflow-hidden transition-all duration-300 open:shadow-2xl open:bg-gray-800/60">
                          <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-gray-700/30 transition-colors select-none">
                            <div class="flex items-center space-x-4 flex-1">
                              <div class="p-2 bg-gray-700/50 rounded-lg group-open:bg-amber-500/20 group-open:text-amber-400 transition-colors">
                                <svg
                                  class="w-6 h-6 transform group-open:rotate-90 transition-transform duration-200"
                                  fill="none"
                                  viewBox="0 0 24 24"
                                  stroke="currentColor"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"
                                  />
                                </svg>
                              </div>
                              <div class="flex-1">
                                <div class="flex items-center justify-between">
                                  <h3 class="text-lg font-bold text-white group-hover:text-amber-400 transition-colors">
                                    {raid.raid_name}
                                  </h3>
                                  <div class="flex items-center space-x-2">
                                    <button
                                      type="button"
                                      onclick={`openRosterModal(${raid.raid_id})`}
                                      class="inline-flex items-center px-2 py-1 border border-indigo-500/30 text-xs font-medium rounded-full shadow-sm text-indigo-300 bg-indigo-600/20 hover:bg-indigo-600/30 focus:outline-none transition-colors"
                                      title="Ver miembros elegibles del roster"
                                    >
                                      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                      </svg>
                                      {eligibleCount}
                                    </button>
                                    <button
                                      type="button"
                                      onclick={`openNewScheduleModal('${raid.raid_id}', '${raid.raid_name}')`}
                                      class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-full shadow-sm text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors"
                                    >
                                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                      </svg>
                                      Nuevo Horario
                                    </button>
                                  </div>
                                </div>
                                <div class="flex items-center space-x-3 text-sm text-gray-400 mt-1">
                                  <span>{raid.schedules.length} horarios</span>
                                  <span>•</span>
                                  <span>{totalRegistrations} solicitudes</span>
                                  {totalPending > 0 && (
                                    <span class="status-count-en_revision text-blue-400 font-medium">
                                      • {totalPending} pendientes
                                    </span>
                                  )}
                                </div>
                              </div>
                            </div>

                            <div class="flex items-center space-x-2">
                              <div class="h-2 w-24 bg-gray-700 rounded-full overflow-hidden hidden sm:block">
                                <div
                                  class="progress-bar-fill h-full bg-gradient-to-r from-green-500 to-emerald-400"
                                  style={`width: ${totalRegistrations > 0 ? (raid.schedules.reduce((sum, s) => sum + s.registrations.filter(r => r.status === 'aceptado').length, 0) / totalRegistrations) * 100 : 0}%`}
                                />
                              </div>
                            </div>
                          </summary>

                          {/* Schedule-level tabs */}
                          <div class="p-4 border-t border-gray-700/50 space-y-3">
                            {raid.schedules.map((schedule) => {
                              const pendingCount = schedule.registrations.filter(r => r.status === 'en_revision').length;
                              
                              return (
                                <details class="bg-gray-900/40 rounded-lg border border-gray-700/30 overflow-hidden">
                                  <summary class="flex items-center justify-between p-3 cursor-pointer hover:bg-gray-800/50 transition-colors">
                                    <div class="flex items-center space-x-3 flex-1">
                                      <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                      </svg>
                                      <div class="flex items-center space-x-3 text-sm">
                                        <span class="capitalize font-medium text-white">{schedule.day_of_week}</span>
                                        <span class="text-gray-500">•</span>
                                        <span class="text-amber-400">{schedule.start_time} ST</span>
                                        <span class="text-gray-500">•</span>
                                        <span class="text-gray-400">{schedule.registrations.length} jugadores</span>
                                        {pendingCount > 0 && (
                                          <>
                                            <span class="text-gray-500">•</span>
                                            <span class="text-blue-400 font-medium">{pendingCount} pendientes</span>
                                          </>
                                        )}
                                      </div>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                      <button
                                        type="button"
                                        onclick={`copyInviteCommand(${JSON.stringify(schedule.registrations.map(r => r.player_name))}, '${raid.raid_name}', '${schedule.day_of_week}', '${schedule.start_time}'); event.stopPropagation();`}
                                        class="px-2 py-1 text-xs bg-indigo-600/20 hover:bg-indigo-600/30 text-indigo-300 border border-indigo-500/30 rounded transition-colors flex items-center space-x-1"
                                        title="Copiar comando de invitación WoW"
                                      >
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                        </svg>
                                        <span>Copiar</span>
                                      </button>
                                      <div class="h-2 w-16 bg-gray-700 rounded-full overflow-hidden">
                                        <div
                                          class="h-full bg-gradient-to-r from-green-500 to-emerald-400"
                                          style={`width: ${(schedule.registrations.filter(r => r.status === 'aceptado').length / Math.max(1, schedule.registrations.length)) * 100}%`}
                                        />
                                      </div>
                                    </div>
                                  </summary>

                                  <div class="border-t border-gray-700/30">
                                    <div class="overflow-x-auto">
                                      <table class="min-w-full divide-y divide-gray-700/50">
                                        <thead class="bg-gray-900/50">
                                          <tr>
                                            <th
                                              scope="col"
                                              class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
                                            >
                                              Jugador
                                            </th>
                                            <th
                                              scope="col"
                                              class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
                                            >
                                              Rol & Clase
                                            </th>
                                            <th
                                              scope="col"
                                              class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
                                            >
                                              Estado
                                            </th>
                                            <th
                                              scope="col"
                                              class="px-6 py-3 text-right text-xs font-medium text-gray-400 uppercase tracking-wider"
                                            >
                                              Acciones
                                            </th>
                                          </tr>
                                        </thead>
                                        <tbody class="divide-y divide-gray-700/30 bg-gray-800/20">
                                          {schedule.registrations.map((reg) => (
                                            <tr class="registration-card hover:bg-gray-700/20 transition-colors">
                                              <td class="px-6 py-4 whitespace-nowrap">
                                                <button
                                                  type="button"
                                                  onclick={`openEditModal(${JSON.stringify(reg)})`}
                                                  class="text-left hover:text-amber-400 transition-colors cursor-pointer"
                                                >
                                                  <div class="text-sm font-medium text-white hover:underline">
                                                    {reg.player_name}
                                                  </div>
                                                </button>
                                                {reg.raid_role && reg.raid_role !== 'asistente' && (
                                                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-900/30 text-amber-400 mt-1">
                                                    {reg.raid_role}
                                                  </span>
                                                )}
                                              </td>
                                              <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex flex-col">
                                                  <span class="text-sm text-gray-300 capitalize">
                                                    {reg.player_class}
                                                  </span>
                                                  <span class="text-xs text-gray-500 capitalize">
                                                    {reg.player_role}
                                                  </span>
                                                </div>
                                              </td>
                                              <td class="px-6 py-4 whitespace-nowrap">
                                                <span
                                                  class={`status-badge inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border ${
                                                    reg.status === 'aceptado'
                                                      ? 'bg-green-900/20 text-green-400 border-green-700/30'
                                                      : reg.status === 'en_espera'
                                                        ? 'bg-amber-900/20 text-amber-400 border-amber-700/30'
                                                        : 'bg-blue-900/20 text-blue-400 border-blue-700/30'
                                                  }`}
                                                >
                                                  {reg.status === 'en_revision'
                                                    ? 'Revisión'
                                                    : reg.status === 'aceptado'
                                                      ? 'Aceptado'
                                                      : reg.status === 'en_espera'
                                                        ? 'En Espera'
                                                        : reg.status}
                                                </span>
                                              </td>
                                              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                <div class="flex justify-end space-x-2">
                                                  <form
                                                    method="post"
                                                    action="/api/admin/update-status"
                                                    class="inline"
                                                  >
                                                    <input type="hidden" name="id" value={reg.id} />
                                                    <input type="hidden" name="status" value="aceptado" />
                                                    <button
                                                      type="submit"
                                                      data-status="aceptado"
                                                      disabled={reg.status === 'aceptado'}
                                                      class={`p-1.5 rounded-lg transition-colors ${
