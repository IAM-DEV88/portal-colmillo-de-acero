      // Helper to generate command chunks
      function generateInviteChunks(names, message) {
        const MAX_LENGTH = 255;
        // Base command structure: /run local msg="..." local t={...} for i,v in ipairs(t) do InviteUnit(v); SendChatMessage(msg,"WHISPER",nil,v) end
        
        // Escape double quotes in message just in case
        const safeMessage = message.replace(/"/g, '\\"');
        
        const baseCommandStart = `/run local msg="${safeMessage}" local t={`;
        const baseCommandEnd = `} for i,v in ipairs(t) do InviteUnit(v); SendChatMessage(msg,"WHISPER",nil,v) end`;
        
        const fixedLength = baseCommandStart.length + baseCommandEnd.length;
        const availableSpace = MAX_LENGTH - fixedLength;
        
        console.log('Generating chunks:', { 
          namesCount: names.length, 
          messageLength: safeMessage.length, 
          fixedLength, 
          availableSpace 
        });

        if (availableSpace <= 0) {
          console.error('Message is too long for WoW macro limit');
          alert('El mensaje es demasiado largo para caber en una macro de WoW. Por favor acórtalo.');
          return [];
        }

        const chunks = [];
        let currentChunkNames = [];
        let currentLength = 0;

        names.forEach((name, index) => {
          // Format name: "Name"
          // If not first name in chunk, add comma: ,"Name"
          const nameStr = `"${name}"`;
          // Separator is needed if it's not the very first item in the chunk
          const separator = currentChunkNames.length > 0 ? ',' : '';
          const itemLength = nameStr.length + separator.length;

          // Check if adding this item would exceed the limit
          if (currentLength + itemLength > availableSpace) {
            // Finish current chunk if it has items
            if (currentChunkNames.length > 0) {
              const command = `${baseCommandStart}${currentChunkNames.join(',')}${baseCommandEnd}`;
              chunks.push({ command, count: currentChunkNames.length });
              console.log(`Chunk created with ${currentChunkNames.length} names. Length: ${command.length}`);
            }
            
            // Start new chunk with current item
            // Check if even a single item fits
            if (itemLength > availableSpace) {
               console.error(`Name "${name}" is too long to fit in any chunk!`);
               // We have to skip it or it breaks the macro. 
               // For now, let's add it and let it break or just warn.
            }
            
            currentChunkNames = [nameStr];
            // For the first item in a new chunk, there is no leading comma separator in the string construction logic above
            // But wait, my logic above `const separator = ...` depends on `currentChunkNames.length`.
            // If I just reset `currentChunkNames = [nameStr]`, the next iteration will see length 1.
            // The length of this new chunk so far is just `nameStr.length` (no comma).
            currentLength = nameStr.length;
          } else {
            currentChunkNames.push(nameStr); // We store just the name, join with comma later
            currentLength += itemLength;
          }
        });

        // Add last chunk
        if (currentChunkNames.length > 0) {
          const command = `${baseCommandStart}${currentChunkNames.join(',')}${baseCommandEnd}`;
          chunks.push({ command, count: currentChunkNames.length });
          console.log(`Last chunk created with ${currentChunkNames.length} names. Length: ${command.length}`);
        }

        return chunks;
      }

