---
import Layout from '../components/layout/Layout.astro';
import AddonGallery from '../components/index/AddonGallery.astro';
import ImageComponent from '@/components/index/ImageComponent.astro';
---

<Layout title="Inicio">
  <!-- Main Container -->
  <main class="min-h-screen w-full">
    <!-- Main Content -->
    <div
      class="relative flex flex-col items-center justify-center w-full max-w-full mx-auto"
    >
      <!-- Header -->
      <header class="text-center animate-fade-in">
        <h1
          class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-amber-400 via-amber-300 to-amber-500 font-title tracking-wider"
        >
          BIENVENIDOS
        </h1>
        <div
          class="w-48 h-0.5 bg-gradient-to-r from-amber-900/0 via-amber-500/80 to-amber-900/0 mx-auto my-6"
        >
        </div>
        <div
          class="relative mb-4 animate-fade-in-1"
          style="animation-delay: 0.3s"
          data-astro-cid-wuxc42xx=""
        >
          <img
            src="images/logo.png"
            alt="Raid Dominion"
            width="280"
            height="auto"
            class="drop-shadow-[0_0_15px_rgba(245,158,11,0.4)]"
            data-astro-cid-wuxc42xx=""
          />
          <style>
            @keyframes float {
              0%, 100% {
                transform: translateY(0) translateX(-50%);
              }
              50% {
                transform: translateY(-5px) translateX(-50%);
              }
            }
          </style>
          
          <a href="/voto" class="absolute top-[-30px] left-1/2 w-auto -translate-x-1/2 block">
            <div class="bg-gradient-to-r from-gray-900/90 to-gray-800/30 rounded-lg shadow-xl py-1 px-6 border border-amber-900/30 hover:border-amber-800/50 transition-all duration-300 hover:shadow-lg hover:shadow-amber-500/5 cursor-pointer"
                 style="animation: float 3s ease-in-out infinite;">
              <p class="text-center text-white text-sm font-bold tracking-wider whitespace-nowrap">
                🎃 ¡Evento de Halloween! 👻
              </p>
            </div>
          </a>
        </div>
      </header>

      <!-- Navigation Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 w-full max-w-6xl">
        <!-- Roster Card -->
        <a
          href="/roster"
          class="relative group bg-gray-900/60 backdrop-blur-sm border border-amber-900/30 rounded-xl p-6 transition-all duration-300 hover:border-amber-800/50 hover:shadow-lg hover:shadow-amber-500/5 hover:-translate-y-1 overflow-hidden animate-fade-in opacity-0"
          style="animation-delay: 0.2s;"
        >
          <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
          <div class="relative z-10">
            <div class="text-amber-400 mb-4 text-3xl">
              <i class="fas fa-users"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">ROSTER</h3>
            <p class="text-amber-100/70 text-sm mb-4">
              Conoce a los miembros de nuestra hermandad y sus roles
            </p>
            <div
              class="mt-4 text-xs text-amber-400 flex items-center group-hover:text-amber-300 transition-colors"
            >
              <span>VER MÁS</span>
              <i class="fas fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
            </div>
          </div>
          <div
            class="absolute inset-0 border-2 border-transparent group-hover:border-amber-500/20 rounded-xl transition-all duration-300 pointer-events-none"
          >
          </div>
        </a>

        <!-- Raids Card -->
        <a
          href="/raids"
          class="relative group bg-gray-900/60 backdrop-blur-sm border border-amber-900/30 rounded-xl p-6 transition-all duration-300 hover:border-amber-800/50 hover:shadow-lg hover:shadow-amber-500/5 hover:-translate-y-1 overflow-hidden animate-fade-in opacity-0"
          style="animation-delay: 0.4s;"
        >
          <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
          <div class="relative z-10">
            <div class="text-amber-400 mb-4 text-3xl">
              <i class="fas fa-dungeon"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">RAIDS</h3>
            <p class="text-amber-100/70 text-sm mb-4">
              Horarios, líderes y progreso de incursiones
            </p>
            <div
              class="mt-4 text-xs text-amber-400 flex items-center group-hover:text-amber-300 transition-colors"
            >
              <span>VER MÁS</span>
              <i class="fas fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
            </div>
          </div>
          <div
            class="absolute inset-0 border-2 border-transparent group-hover:border-amber-500/20 rounded-xl transition-all duration-300 pointer-events-none"
          >
          </div>
        </a>

        <!-- Guides Card -->
        <a
          href="/guides"
          class="relative group bg-gray-900/60 backdrop-blur-sm border border-amber-900/30 rounded-xl p-6 transition-all duration-300 hover:border-amber-800/50 hover:shadow-lg hover:shadow-amber-500/5 hover:-translate-y-1 overflow-hidden animate-fade-in opacity-0"
          style="animation-delay: 0.6s;"
        >
          <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
          <div class="relative z-10">
            <div class="text-amber-400 mb-4 text-3xl">
              <i class="fas fa-book"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">GUÍAS</h3>
            <p class="text-amber-100/70 text-sm mb-4">
              Estrategias y consejos para el contenido de endgame
            </p>
            <div
              class="mt-4 text-xs text-amber-400 flex items-center group-hover:text-amber-300 transition-colors"
            >
              <span>VER MÁS</span>
              <i class="fas fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
            </div>
          </div>
          <div
            class="absolute inset-0 border-2 border-transparent group-hover:border-amber-500/20 rounded-xl transition-all duration-300 pointer-events-none"
          >
          </div>
        </a>
      </div>
    </div>
    <section id="addon" class="scroll-mt-16 py-8">
      <div class="max-w-7xl mx-auto">
        <div class="w-full">
          <!-- Main Content -->
          <div class="w-full">
            <div
              class="rounded-xl overflow-hidden border border-amber-600/30 transform transition-all duration-300 hover:shadow-amber-500/20 bg-gray-900/50 backdrop-blur-sm p-6 sm:p-8"
            >
              <!-- Header with Logo -->
              <div class="text-center mb-10">
                <div class="mb-6">
                  <ImageComponent classes="h-16 mx-auto drop-shadow-lg" imageName="logo.png" />
                </div>
                <div class="text-center mb-8">
                  <h2 class="text-3xl font-bold text-amber-400 mb-2">Raid Dominion - Addon</h2>
                  <div class="w-24 h-1 bg-amber-500 mt-4 mx-auto"></div>
                </div>
              </div>
              <!-- Introduction -->
              <div class="prose prose-invert max-w-none mb-8">
                <p class="text-gray-300 leading-relaxed">
                  <span class="text-amber-300 font-semibold">Raid Dominion</span> es un addon especialmente
                  diseñado para
                  <span class="text-amber-300 font-semibold">World of Warcraft 3.3.5a</span>, creado
                  por el maestro de la hermandad Colmillo de Acero. Este potente addon está
                  destinado a facilitar la gestión, control y comunicación en las bandas,
                  permitiendo a los líderes de banda una organización más efectiva de roles, buffs y
                  habilidades.
                </p>
              </div>

              <!-- Gallery -->
              <div class="mb-10">
                <AddonGallery />
              </div>

              <!-- Features -->
              <div class="mb-12">
                <h3 class="text-2xl font-bold text-amber-300 mb-8 text-center">
                  Características Principales
                </h3>
                <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
                  <!-- Feature 1 -->
                  <div class="group bg-amber-900/10 backdrop-blur-sm rounded-xl overflow-hidden border border-amber-900/30 p-6 transition-all duration-300 hover:border-amber-700/50 hover:bg-amber-900/20">
                    <div class="w-12 h-12 bg-amber-900/50 rounded-lg flex items-center justify-center text-amber-400 text-2xl mb-4 group-hover:bg-amber-800/50 transition-colors">
                      📜
                    </div>
                    <h3 class="text-xl font-bold text-amber-200 mb-2">Codex de la Hermandad</h3>
                    <p class="text-amber-100/90 text-sm">Todas las mecánicas y reglas de las raids en un solo lugar.</p>
                  </div>
    
                  <!-- Feature 2 -->
                  <div class="group bg-amber-900/10 backdrop-blur-sm rounded-xl overflow-hidden border border-amber-900/30 p-6 transition-all duration-300 hover:border-amber-700/50 hover:bg-amber-900/20">
                    <div class="w-12 h-12 bg-amber-900/50 rounded-lg flex items-center justify-center text-amber-400 text-2xl mb-4 group-hover:bg-amber-800/50 transition-colors">
                      👥
                    </div>
                    <h3 class="text-xl font-bold text-amber-200 mb-2">Gestión de Bandas</h3>
                    <p class="text-amber-100/90 text-sm">Control total sobre la formación de tu raid con solo unos clics.</p>
                  </div>
    
                  <!-- Feature 3 -->
                  <div class="group bg-amber-900/10 backdrop-blur-sm rounded-xl overflow-hidden border border-amber-900/30 p-6 transition-all duration-300 hover:border-amber-700/50 hover:bg-amber-900/20">
                    <div class="w-12 h-12 bg-amber-900/50 rounded-lg flex items-center justify-center text-amber-400 text-2xl mb-4 group-hover:bg-amber-800/50 transition-colors">
                      🎯
                    </div>
                    <h3 class="text-xl font-bold text-amber-200 mb-2">Asignación de Roles</h3>
                    <p class="text-amber-100/90 text-sm">Gestiona los roles de los jugadores de manera intuitiva.</p>
                  </div>
    
                  <!-- Feature 4 -->
                  <div class="group bg-amber-900/10 backdrop-blur-sm rounded-xl overflow-hidden border border-amber-900/30 p-6 transition-all duration-300 hover:border-amber-700/50 hover:bg-amber-900/20">
                    <div class="w-12 h-12 bg-amber-900/50 rounded-lg flex items-center justify-center text-amber-400 text-2xl mb-4 group-hover:bg-amber-800/50 transition-colors">
                      ✨
                    </div>
                    <h3 class="text-xl font-bold text-amber-200 mb-2">Control de Buffs</h3>
                    <p class="text-amber-100/90 text-sm">Asegura que todos los buffs necesarios estén cubiertos.</p>
                  </div>
                </div>
              </div>
    
              <!-- CTA Buttons -->
              <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto mt-16">
                <!-- Download Button -->
                <a
                  href="https://github.com/IAM-DEV88/RaidDominion/archive/refs/heads/main.zip"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-emerald-900/30 to-emerald-800/20 border border-emerald-800/30 p-6 hover:border-emerald-700/50 transition-all duration-300 hover:shadow-lg hover:shadow-emerald-500/10"
                >
                  <div class="flex items-center">
                    <div class="relative">
                      <div class="absolute -inset-1 bg-gradient-to-r from-emerald-500 to-green-600 rounded-full blur opacity-75 group-hover:opacity-100 transition duration-200"></div>
                      <div class="relative w-12 h-12 bg-gradient-to-br from-emerald-600 to-emerald-700 rounded-full flex items-center justify-center text-white group-hover:from-emerald-700 group-hover:to-emerald-800 transition-colors duration-300">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4 text-left">
                      <h3 class="text-lg font-semibold text-emerald-200 group-hover:text-emerald-100 transition-colors">Descargar Addon</h3>
                      <p class="text-sm text-emerald-100/70 mt-1">Obtén la última versión</p>
                    </div>
                  </div>
                </a>
                
                <!-- GitHub Star Button -->
                <a
                  href="https://github.com/IAM-DEV88/RaidDominion/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-gray-900/30 to-gray-800/20 border border-gray-800/30 p-6 hover:border-gray-700/50 transition-all duration-300 hover:shadow-lg hover:shadow-gray-500/10"
                >
                  <div class="flex items-center">
                    <div class="relative">
                      <div class="absolute -inset-1 bg-gradient-to-r from-gray-500 to-gray-600 rounded-full blur opacity-75 group-hover:opacity-100 transition duration-200"></div>
                      <div class="relative w-12 h-12 bg-gradient-to-br from-gray-700 to-gray-800 rounded-full flex items-center justify-center text-white group-hover:from-gray-600 group-hover:to-gray-700 transition-colors duration-300">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                          <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.268 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.294 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.699 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.58.688.482A10.02 10.02 0 0022 12.017C22 6.484 17.522 2 12 2z"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4 text-left">
                      <h3 class="text-lg font-semibold text-gray-200 group-hover:text-gray-100 transition-colors">Deja una Estrella</h3>
                      <p class="text-sm text-gray-100/70 mt-1">Apóyanos en GitHub</p>
                    </div>
                  </div>
                </a>
                
                <!-- YouTube Button -->
                <a
                  href="https://www.youtube.com/@IAM-GAMECODE"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-amber-900/30 to-amber-800/20 border border-amber-800/30 p-6 hover:border-amber-700/50 transition-all duration-300 hover:shadow-lg hover:shadow-amber-500/10"
                >
                  <div class="flex items-center">
                    <div class="relative">
                      <div class="absolute -inset-1 bg-gradient-to-r from-amber-500 to-yellow-600 rounded-full blur opacity-75 group-hover:opacity-100 transition duration-200"></div>
                      <div class="relative w-12 h-12 bg-gradient-to-br from-red-600 to-red-700 rounded-full flex items-center justify-center text-white group-hover:from-red-700 group-hover:to-red-800 transition-colors duration-300">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4 text-left">
                      <h3 class="text-lg font-semibold text-amber-200 group-hover:text-amber-100 transition-colors">Tutorial en YouTube</h3>
                      <p class="text-sm text-amber-100/70 mt-1">Aprende a usar el addon</p>
                    </div>
                  </div>
                </a>
    
                <!-- Discord Button -->
                <a
                  href="https://discord.gg/BwdpNV9sky"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-indigo-900/30 to-indigo-800/20 border border-indigo-800/30 p-6 hover:border-indigo-700/50 transition-all duration-300 hover:shadow-lg hover:shadow-indigo-500/10"
                >
                  <div class="flex items-center">
                    <div class="relative">
                      <div class="absolute -inset-1 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full blur opacity-75 group-hover:opacity-100 transition duration-200"></div>
                      <div class="relative w-12 h-12 bg-gradient-to-br from-indigo-600 to-indigo-700 rounded-full flex items-center justify-center text-white group-hover:from-indigo-700 group-hover:to-indigo-800 transition-colors duration-300">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M20.317 4.37a19.791 19.791 0 00-4.885-1.515.074.074 0 00-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 00-5.487 0 12.64 12.64 0 00-.617-1.25.077.077 0 00-.079-.037A19.736 19.736 0 003.677 4.37a.07.07 0 00-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 00.031.057 19.9 19.9 0 005.993 3.03.078.078 0 00.084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 00-.041-.106 13.107 13.107 0 01-1.872-.892.077.077 0 01-.008-.128 10.2 10.2 0 00.372-.292.074.074 0 01.077-.01c3.928 1.8 8.18 1.8 12.062 0a.074.074 0 01.078.01c.12.098.246.192.373.292a.077.077 0 01-.006.127 12.3 12.3 0 01-1.873.892.077.077 0 00-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 00.084.028 19.84 19.84 0 006.002-3.03.077.077 0 00.032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 00-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.95-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.951 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.951-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.951 2.418-2.157 2.418z"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4 text-left">
                      <h3 class="text-lg font-semibold text-indigo-200 group-hover:text-indigo-100 transition-colors">Únete a Discord</h3>
                      <p class="text-sm text-indigo-100/70 mt-1">Soporte y actualizaciones</p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section id="donaciones" class="scroll-mt-16">
      <div class="max-w-7xl mx-auto">
        <section class="mt-8 mb-8 flex flex-col flex-wrap lg:flex-row py-6">
          <div class="w-full text-center mb-6">
            <h2 class="text-3xl font-bold text-white mb-2">¡Apóyanos!</h2>
            <p class="text-gray-300 mb-4">Tu contribución nos ayuda a seguir mejorando</p>
            <div class="w-20 h-1 bg-amber-500 mx-auto rounded-full"></div>
          </div>
          <div class="w-full grid grid-cols-1 sm:grid-cols-3 gap-6">
            <div
              class="group relative bg-white/5 backdrop-blur-sm rounded-xl p-5 transition-all duration-300 hover:scale-[1.02] hover:shadow-lg hover:shadow-amber-500/10 border border-gray-700 hover:border-amber-500 flex flex-col"
            >
              <h3 class="text-lg sm:text-xl font-bold text-white mb-4 text-center">PayPal</h3>
              <div class="flex-grow flex flex-col items-center">
                <div class="mb-4 flex items-center justify-center h-36">
                  <img
                    src="/images/paypal.png"
                    class="h-16 object-contain"
                    alt="Logo de PayPal"
                    loading="lazy"
                    decoding="async"
                  />
                </div>
                <div class="mt-auto w-full">
                  <a
                    href="https://paypal.me/iamdev88"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block w-full px-4 py-3 bg-amber-600 hover:bg-amber-700 text-white font-medium rounded-lg transition-colors duration-300 text-center"
                  >
                    Donar con PayPal <svg
                      class="w-4 h-4 ml-2 inline-block"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                  </a>
                </div>
              </div>
              <div
                class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-amber-500 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
              >
              </div>
            </div><div
              class="group relative overflow-hidden bg-white/5 backdrop-blur-sm rounded-xl p-5 transition-all duration-300 hover:scale-[1.02] hover:shadow-lg hover:shadow-amber-500/10 border border-gray-700 hover:border-amber-500 flex flex-col"
            >
              <h3 class="text-lg sm:text-xl font-bold text-white mb-4 text-center">Nequi</h3>
              <div class="flex-grow flex flex-col items-center">
                <div class="mb-4">
                  <p class="text-sm text-gray-400 mb-2">Escanea el código QR</p>
                  <div class="bg-white p-2 rounded-lg">
                    <img
                      src="/images/nequiqr.jpeg"
                      class="w-32 h-32 sm:w-36 sm:h-36 object-contain"
                      alt="Código QR de Nequi"
                      loading="lazy"
                      decoding="async"
                    />
                  </div>
                </div>
              </div>
              <div
                class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-amber-500 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
              >
              </div>
            </div><div
              class="group relative overflow-hidden bg-white/5 backdrop-blur-sm rounded-xl p-5 transition-all duration-300 hover:scale-[1.02] hover:shadow-lg hover:shadow-amber-500/10 border border-gray-700 hover:border-amber-500 flex flex-col"
            >
              <h3 class="text-lg sm:text-xl font-bold text-white mb-4 text-center">Wompi</h3>
              <div class="flex-grow flex flex-col items-center">
                <div class="mb-4">
                  <p class="text-sm text-gray-400 mb-2">Escanea el código QR</p>
                  <div class="bg-white p-2 rounded-lg">
                    <img
                      src="/images/wompiqr.jpeg"
                      class="w-32 h-32 sm:w-36 sm:h-36 object-contain"
                      alt="Código QR de Wompi"
                      loading="lazy"
                      decoding="async"
                    />
                  </div>
                </div>
                <div class="mt-auto w-full">
                  <a
                    href="https://checkout.wompi.co/l/PXF3MZ"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block w-full px-4 py-3 bg-amber-600 hover:bg-amber-700 text-white font-medium rounded-lg transition-colors duration-300 text-center"
                  >
                    Donar con Wompi <svg
