---
import Layout from '../components/layout/Layout.astro';
---

<Layout title="Inicio">
  <!-- Main Container -->
  <main class="overflow-hidden">
    <!-- Main Content -->
    <div class="relative flex flex-col items-center justify-center md:mt-6 sm:mt-0">
      <!-- Header -->
      <header class="text-center md:mb-8 sm:mb-2 animate-fade-in">
        <h1 class="text-2xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-accent via-yellow-300 to-accent-dark font-title tracking-wider">
          BIENVENIDOS
        </h1>
        <div class="w-48 h-1 bg-gradient-to-r from-accent/0 via-accent to-accent/0 mx-auto my-6"></div>
        
      </header>

      <!-- Navigation Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 w-full max-w-5xl px-4">
        <!-- Roster Card -->
        <a 
          href="/roster" 
          class="relative group bg-gradient-to-br from-steel-darker via-steel-dark to-steel-darker backdrop-blur-sm border border-accent rounded-xl p-6 transition-all duration-300 hover:border-accent/50 hover:shadow-lg hover:shadow-accent/10 hover:-translate-y-1 overflow-hidden animate-fade-in opacity-0"
          style="animation-delay: 0.2s;"
        >
          <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
          <div class="relative z-10">
            <div class="text-accent mb-4 text-3xl">
              <i class="fas fa-users"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">ROSTER</h3>
            <p class="text-text-muted text-sm">Conoce a los miembros de nuestra hermandad y sus roles</p>
            <div class="mt-4 text-xs text-accent flex items-center">
              <span>VER MÁS</span>
              <i class="fas fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
            </div>
          </div>
          <div class="absolute inset-0 border-2 border-transparent group-hover:border-accent/30 rounded-xl transition-all duration-300 pointer-events-none"></div>
        </a>

        <!-- Raids Card -->
        <a 
          href="/raids" 
          class="relative group bg-gradient-to-br from-steel-darker via-steel-dark to-steel-darker backdrop-blur-sm border border-accent rounded-xl p-6 transition-all duration-300 hover:border-accent/50 hover:shadow-lg hover:shadow-accent/10 hover:-translate-y-1 overflow-hidden animate-fade-in opacity-0"
          style="animation-delay: 0.4s;"
        >
          <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
          <div class="relative z-10">
            <div class="text-accent mb-4 text-3xl">
              <i class="fas fa-dungeon"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">RAIDS</h3>
            <p class="text-text-muted text-sm">Horarios, líderes y progreso de incursiones</p>
            <div class="mt-4 text-xs text-accent flex items-center">
              <span>VER MÁS</span>
              <i class="fas fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
            </div>
          </div>
          <div class="absolute inset-0 border-2 border-transparent group-hover:border-accent/30 rounded-xl transition-all duration-300 pointer-events-none"></div>
        </a>

        <!-- Guides Card -->
        <a 
          href="/guides" 
          class="relative group bg-gradient-to-br from-steel-darker via-steel-dark to-steel-darker backdrop-blur-sm border border-accent rounded-xl p-6 transition-all duration-300 hover:border-accent/50 hover:shadow-lg hover:shadow-accent/10 hover:-translate-y-1 overflow-hidden animate-fade-in opacity-0"
          style="animation-delay: 0.6s;"
        >
          <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
          <div class="relative z-10">
            <div class="text-accent mb-4 text-3xl">
              <i class="fas fa-book"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">GUÍAS</h3>
            <p class="text-text-muted text-sm">Estrategias y consejos para el contenido de endgame</p>
            <div class="mt-4 text-xs text-accent flex items-center">
              <span>VER MÁS</span>
              <i class="fas fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
            </div>
          </div>
          <div class="absolute inset-0 border-2 border-transparent group-hover:border-accent/30 rounded-xl transition-all duration-300 pointer-events-none"></div>
        </a>
      </div>

    </div>

    <!-- Animated Background Elements -->
    <div class="absolute top-1/4 left-1/4 w-32 h-32 rounded-full bg-accent/10 blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/3 right-1/4 w-48 h-48 rounded-full bg-accent/5 blur-3xl animate-pulse delay-1000"></div>
  </main>
  
  <style>
    /* Grid Pattern Background */
    .bg-grid-pattern {
      background-image: 
        linear-gradient(to right, currentColor 1px, transparent 1px),
        linear-gradient(to bottom, currentColor 1px, transparent 1px);
      background-size: 40px 40px;
      color: rgba(255, 255, 255, 0.05);
    }
    
    /* Font Awesome Icons */
    .fa-users, .fa-dungeon, .fa-book, .fa-arrow-right, 
    .fa-discord, .fa-twitter, .fa-youtube {
      font-family: 'Font Awesome 6 Free';
      font-weight: 900;
    }
    
    /* Animation for the header underline */
    @keyframes gradient {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    
    /* Custom font for the title */
    .font-title {
      font-family: 'Arial', sans-serif;
      letter-spacing: 2px;
      text-transform: uppercase;
    }
  </style>

<!-- AOS Animation Library -->
<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // @ts-ignore - AOS is loaded from CDN
    if (window.AOS) {
      // @ts-ignore
      AOS.init({
        duration: 800,
        once: true,
        easing: 'ease-out-quart',
      });
    }
  });
</script>
