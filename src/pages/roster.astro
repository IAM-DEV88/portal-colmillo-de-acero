---
import Layout from '../components/layout/Layout.astro';
import RosterTable from '../components/roster/RosterTable.astro';
import FeaturedPlayers from '../components/roster/FeaturedPlayers.astro';
import rosterData from '../data/roster.json';
import { validatePublicNote } from '../utils/rosterUtils';

// Definir el tipo para los miembros del roster
interface RosterMember {
  name: string;
  officerNote?: string;
  class: string;
  publicNote?: string;
  rank?: string;
  noteValidation?: any;
}

// Asegurarse de que los datos tengan la estructura esperada
const players = (rosterData as any).players || {};
const formattedRosterData = Object.values(players).map((member: any) => {
  try {
    // Validar la nota pública si existe
    const publicNote = String(member.publicNote || '').trim();
    const noteValidation = validatePublicNote(publicNote, member.name || 'Desconocido');

    // Asegurar que la clase sea válida
    const className = String(member.class || 'Desconocido').trim();

    return {
      ...member,
      name: String(member.name || 'Sin nombre').trim(),
      class: className,
      rank: String(member.rank || 'Miembro').trim(),
      publicNote,
      noteValidation,
      officerNote: String(member.officerNote || '').trim(),
      mainAlt: member.mainAlt || 'A',
      level: Number(member.level) || 80,
      gearScore: Number(member.gearScore) || 0,
      // Asegurar que los campos de validación estén presentes
      validation: {
        ...noteValidation,
        isValid: noteValidation.isValid || false,
        missingFields: Array.isArray(noteValidation.missingFields)
          ? noteValidation.missingFields
          : [],
      },
    };
  } catch (error) {
    console.error('Error procesando miembro:', member, error);
    return {
      ...member,
      name: String(member.name || 'Error en datos').trim(),
      class: 'Desconocido',
      rank: 'Error',
      publicNote: '',
      noteValidation: {
        isValid: false,
        errors: ['Error al procesar datos del personaje'],
        missingFields: ['Datos inválidos'],
      },
      officerNote: '',
      mainAlt: 'M',
      level: 0,
      gearScore: 0,
      validation: {
        isValid: false,
        errors: ['Error al procesar datos del personaje'],
        missingFields: ['Datos inválidos'],
      },
    };
  }
});

// Importar tipos y datos
import type { FeaturedPlayersData, FeaturedPlayer } from '../types/featuredPlayers';
import featuredDataRaw from '../data/featuredPlayers.json';

// Hacer un type assertion para los datos
const featuredData = featuredDataRaw as unknown as FeaturedPlayersData;

// Obtener el año y mes actual
const currentYear = new Date().getFullYear().toString();
const currentMonth = (new Date().getMonth() + 1).toString().padStart(2, '0');

// Obtener jugadores destacados del mes actual
const currentYearData = featuredData[currentYear];
const currentMonthData =
  currentYearData && currentMonth in currentYearData
    ? (currentYearData as Record<string, { featuredPlayers: FeaturedPlayer[] }>)[currentMonth]
        .featuredPlayers
    : [];

const allRecognitions = featuredData.recognitions || [];

// Filtrar jugadores que existen en el roster y revertir el orden
const featuredPlayers = currentMonthData
  .filter(
    (player: FeaturedPlayer) =>
      !player.playerName ||
      formattedRosterData.some(
        (member) => member.name.toLowerCase() === player.playerName.toLowerCase()
      )
  )
  .reverse(); // Invertir el orden para mostrar los más recientes primero

// Manejar la paginación - 3 en móvil, 10 en pantallas más grandes
let itemsPerPage = 3; // Valor por defecto para móvil
let totalPages = 1; // Inicializar variable

// Función para actualizar items por página según el ancho de pantalla
function updateItemsPerPage() {
  itemsPerPage = window.innerWidth < 768 ? 3 : 9;
  totalPages = Math.ceil(featuredPlayers.length / itemsPerPage);
  // Asegurarse de que la página actual no exceda el número total de páginas
  if (currentPage > totalPages && totalPages > 0) {
    currentPage = totalPages;
  }
}

// Inicializar con el valor correcto
if (typeof window !== 'undefined') {
  updateItemsPerPage();
  // Actualizar al cambiar el tamaño de la ventana
  window.addEventListener('resize', updateItemsPerPage);
}

// Obtener la página actual de la URL
let currentPage = 1;
if (Astro.url.searchParams.has('page')) {
  const page = parseInt(Astro.url.searchParams.get('page') || '1');
  if (!isNaN(page) && page >= 1 && page <= totalPages) {
    currentPage = page;
  }
}
---

<Layout title="Roster">
  <div class="mx-auto animate-fade-in max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Tabla de Roster -->
    <div class="mt-8">
      <RosterTable initialRosterData={formattedRosterData} />
    </div>

    <!-- Sección de Jugadores Destacados -->
    <div class="mt-6">
      <FeaturedPlayers
        featuredPlayers={featuredPlayers}
        rosterData={formattedRosterData}
        recognitions={allRecognitions}
        currentPage={currentPage}
        totalPages={totalPages}
      />
    </div>
  </div></Layout
>
