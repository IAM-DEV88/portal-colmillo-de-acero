---
// Definir los tipos de datos
interface ClassInfo {
  color: string;
  name: string;
}

interface Recognition {
  title: string;
  description: string;
  icon: string;
}

interface FeaturedPlayer {
  playerName: string;
  recognitionIndices: number[];
}

interface RosterMember {
  name: string;
  class: string;
  rank?: string;
  gearScore?: number;
  [key: string]: any;
}

interface Props {
  featuredPlayers: Array<{
    playerName: string;
    recognitionIndices: number[];
    name?: string; // For backward compatibility
  }>;
  rosterData: RosterMember[];
  recognitions?: Recognition[];
  currentPage?: number;
  totalPages?: number;
}

const {
  featuredPlayers = [],
  rosterData = [],
  recognitions = [],
  currentPage = 1,
} = Astro.props as Props;

// Definir la información de clases por defecto
const defaultClassInfo: Record<string, ClassInfo> = {
  Guerrero: { color: 'C79C6E', name: 'Guerrero' },
  Paladín: { color: 'F58CBA', name: 'Paladín' },
  Cazador: { color: 'ABD473', name: 'Cazador' },
  Pícaro: { color: 'FFF569', name: 'Pícaro' },
  Sacerdote: { color: 'FFFFFF', name: 'Sacerdote' },
  'Caballero de la Muerte': { color: 'C41F3B', name: 'Caballero de la Muerte' },
  Chamán: { color: '0070DE', name: 'Chamán' },
  Mago: { color: '69CCF0', name: 'Mago' },
  Brujo: { color: '9482C9', name: 'Brujo' },
  Druida: { color: 'FF7D0A', name: 'Druida' },
};

// Configuración de paginación
const itemsPerPage = 6;
const totalPagesValue = Math.ceil(featuredPlayers.length / itemsPerPage) || 1;
const safeCurrentPage = Math.max(1, Math.min(currentPage, totalPagesValue));

// Calcular páginas para la paginación
let startPage = Math.max(1, safeCurrentPage - 2);
let endPage = Math.min(totalPagesValue, startPage + 4);

if (endPage - startPage < 4) {
  startPage = Math.max(1, endPage - 4);
}

const paginationPages = [];
if (startPage > 1) {
  paginationPages.push(1);
  if (startPage > 2) paginationPages.push('...');
}

for (let i = startPage; i <= endPage; i++) {
  paginationPages.push(i);
}

if (endPage < totalPagesValue) {
  if (endPage < totalPagesValue - 1) paginationPages.push('...');
  paginationPages.push(totalPagesValue);
}

// Función para obtener los datos del jugador del roster
const getPlayerData = (playerName: string): RosterMember | undefined => {
  return rosterData.find((member) => member.name.toLowerCase() === playerName.toLowerCase());
};

// Función para obtener el nombre del jugador
const getPlayerName = (player: any): string => {
  return player.playerName || player.name || '';
};

// Función para obtener el texto de reconocimiento
const getRecognitionText = (player: any, historicalRecognitions: any[] = []): string => {
  if ('recognition' in player) {
    return player.recognition;
  }
  
  // Si tenemos reconocimientos históricos (que ya incluyen el título), los usamos
  if (historicalRecognitions.length > 0) {
    return historicalRecognitions
      .map(rec => rec.title)
      .filter((value, index, self) => self.indexOf(value) === index) // Unique titles
      .join(' • ');
  }

  if (player.recognitionIndices && player.recognitionIndices.length > 0) {
    const recogs = player.recognitionIndices
      .map((idx: number) => recognitions[idx]?.title || '')
      .filter(Boolean);
    return recogs.join(' • ');
  }
  return 'Reconocimiento especial';
};

// Obtener jugadores de la página actual para SSR
const initialPlayers = featuredPlayers.slice(
  (safeCurrentPage - 1) * itemsPerPage,
  safeCurrentPage * itemsPerPage
);

// La sección siempre se muestra, incluso si no hay jugadores destacados
---

<!-- Título de la sección -->
<div class="flex flex-col md:flex-row md:justify-between md:items-end gap-4 px-2 mb-6">
  <div class="flex items-center space-x-4">
    <div class="w-12 h-12 bg-gradient-to-br from-amber-600 to-amber-800 rounded-xl flex items-center justify-center shadow-lg shadow-amber-900/20 transform -rotate-2 hover:rotate-0 transition-transform duration-300">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
      </svg>
    </div>
    <div>
      <h2 class="text-2xl sm:text-3xl font-black text-white uppercase tracking-tighter italic">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-200 via-amber-400 to-amber-200">Jugadores Destacados</span>
      </h2>
      <p class="text-amber-300/60 font-medium tracking-widest uppercase text-[10px] mt-0.5">Reconocimientos del mes actual</p>
    </div>
  </div>
</div>

<div
  class="bg-gradient-to-br from-amber-900/20 via-gray-900/40 to-amber-800/10 backdrop-blur-sm border border-amber-600/30 rounded-2xl p-4 mb-20 shadow-2xl hover:border-amber-500/60 transition-all duration-300 hover:shadow-lg hover:shadow-amber-500/10"
>
  <div id="featured-players-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
    {
      initialPlayers.map((player) => {
        const playerName = getPlayerName(player);
        const playerData = getPlayerData(playerName);
        if (!playerData) return null;

        const classData = {
          color: playerData.class
            ? defaultClassInfo[playerData.class]?.color || 'FFFFFF'
            : 'FFFFFF',
          name: playerData.class || 'Desconocido',
        };

        const playerRecognitions = playerData.recognitions || [];
        const recognitionText = getRecognitionText(player, playerRecognitions);
        
        const featuredRecognitions = player.recognitionIndices
          ? player.recognitionIndices.map((idx: number) => recognitions[idx]).filter(Boolean)
          : [];
        
        // Use full historical recognitions for the modal
        const playerDataForModal = {
          ...playerData,
          recognitions: playerRecognitions.length > 0 ? playerRecognitions : featuredRecognitions
        };
        const playerString = JSON.stringify(playerDataForModal);

        // Calculate raid stats for this member
        const leaderData = playerData.leaderData || {};
        let totalRaids = 0;
        Object.values(leaderData).forEach((data: any) => {
          const stats = data.raidStats || {};
          totalRaids += stats.total || 0;
        });

        // Use the total historical recognition count for the badge
        const recognitionCount = playerRecognitions.length;

        return (
          <div 
            x-data="{ expanded: false }"
            class="group relative bg-gradient-to-br from-gray-900/80 to-gray-800/60 backdrop-blur-sm border rounded-lg transition-all duration-300 hover:bg-gray-800/60 hover:shadow-lg hover:shadow-amber-900/20 cursor-pointer"
            :class="{'z-[60]': expanded}"
            style={`border-color: #${classData.color}66;`}
            onclick={`if(!event.target.closest('.expand-button')) window.openMemberModal(JSON.parse(decodeURIComponent('${encodeURIComponent(playerString)}')))`}
            onmouseover={`this.style.borderColor='#${classData.color}99'; this.style.boxShadow='0 10px 15px -3px #${classData.color}1a, 0 4px 6px -2px #${classData.color}0a';`}
            onmouseout={`this.style.borderColor='#${classData.color}66'; this.style.boxShadow='none';`}
          >
            <!-- Class color accent -->
            <div class="absolute top-0 left-0 w-1 h-full transition-opacity opacity-50 group-hover:opacity-100 rounded-l-lg" style={`background-color: #${classData.color};`}></div>
            
            <!-- Stats Indicators -->
            <div class="absolute top-2 right-2 flex gap-1 z-10">
              {recognitionCount > 0 && (
                <div class="px-1.5 py-0.5 rounded text-[9px] font-bold bg-amber-500/20 text-amber-300 border border-amber-500/30 flex items-center gap-1" title={`${recognitionCount} Reconocimientos`}>
                  <svg class="w-2.5 h-2.5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                  <span>{recognitionCount}</span>
                </div>
              )}
              {totalRaids > 0 && (
                <div class="px-1.5 py-0.5 rounded text-[9px] font-bold bg-blue-500/20 text-blue-300 border border-blue-500/30 flex items-center gap-1" title={`${totalRaids} raids`}>
                  <svg class="w-2.5 h-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                  </svg>
                  <span>{totalRaids}</span>
                </div>
              )}
              
              <!-- Expand Button -->
              <button 
                @click.stop="expanded = !expanded"
                class="expand-button p-1 rounded bg-gray-800/50 border border-amber-600/30 text-amber-400 hover:text-amber-200 hover:border-amber-500/50 transition-all"
                title="Ver reconocimiento"
              >
                <svg class="w-3 h-3 transform transition-transform" :class="{'rotate-180': expanded}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
            </div>
            
            <div class="p-4 pl-6">
              <div class="flex items-center gap-3">
                <!-- Avatar -->
                <div class="relative flex-shrink-0">
                  <img
                    src={`/images/avatars/class_${playerData.class || 'default'}.jpg`}
                    alt={playerData.class || 'Clase'}
                    class={`w-12 h-12 rounded-lg shadow-lg border border-gray-700/50 group-hover:border-[#${classData.color}]/50 transition-colors object-cover`}
                    onerror="this.src='/images/avatars/default.png'"
                  />
                  <div class={`absolute -bottom-1 -right-1 w-4 h-4 rounded-lg border-2 border-gray-900 bg-[#${classData.color}]`} title={playerData.class}></div>
                </div>

                <!-- Info -->
                <div class="flex-1 min-w-0">
                  <div class="font-bold text-gray-100 truncate group-hover:text-amber-200 transition-colors text-lg capitalize" style={`color: #${classData.color}`}>
                    {playerName}
                  </div>
                  <div class="flex flex-wrap items-center gap-2">
                    {playerData.rank && (
                      <span class={`text-[10px] px-2 py-0.5 rounded-lg font-medium border transition-all duration-200 ${
                        playerData.rank.toLowerCase().includes('general admin')
                          ? 'bg-gradient-to-r from-amber-500/10 to-purple-600/10 border-amber-500/40 text-amber-300 hover:bg-amber-500/20 hover:border-amber-400/60'
                          : playerData.rank.toLowerCase().includes('oficial')
                              ? 'bg-gradient-to-r from-blue-500/10 to-blue-600/10 border-blue-500/40 text-blue-300 hover:bg-blue-500/20 hover:border-blue-400/60'
                              : playerData.rank.toLowerCase().includes('explorador')
                                ? 'bg-gradient-to-r from-emerald-500/10 to-emerald-600/10 border-emerald-500/40 text-emerald-300 hover:bg-emerald-500/20 hover:border-emerald-400/60'
                                : playerData.rank.toLowerCase().includes('iniciado')
                                  ? 'bg-gradient-to-r from-green-500/10 to-green-600/10 border-green-500/40 text-green-300 hover:bg-green-500/20 hover:border-green-400/60'
                                  : 'bg-gradient-to-r from-gray-500/10 to-gray-600/10 border-gray-500/40 text-gray-300 hover:bg-gray-500/20 hover:border-gray-400/60'
                      }`}>
                        {playerData.rank}
                      </span>
                    )}
                  </div>
                </div>
              </div>

              <!-- Expandable Recognition Description Overlay -->
              <div 
                x-show="expanded" 
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 transform -translate-y-2 scale-95"
                x-transition:enter-end="opacity-100 transform translate-y-0 scale-100"
                x-transition:leave="transition ease-in duration-150"
                x-transition:leave-start="opacity-100 transform translate-y-0 scale-100"
                x-transition:leave-end="opacity-0 transform -translate-y-2 scale-95"
                class="absolute top-full left-0 w-full z-50 mt-1"
                @click.stop
              >
                <div class="flex items-start gap-2 bg-gray-900/95 backdrop-blur-md p-3 rounded-lg border border-amber-600/30 shadow-2xl">
                  <svg class="w-4 h-4 text-amber-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <div class="flex-1">
                    <p class="text-[11px] font-bold text-amber-200 uppercase tracking-tight leading-tight">{recognitionText}</p>
                    {player.recognitionIndices && player.recognitionIndices.map((idx: number) => (
                      recognitions[idx]?.description && (
                        <p class="text-[10px] text-amber-300/70 mt-1 italic leading-tight">{recognitions[idx].description}</p>
                      )
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>

  <div id="featured-players-pagination" class="mt-8">
    {/* Controles de paginación iniciales (SSR) */}
    {
      totalPagesValue > 1 && (
        <div class="flex items-center justify-center gap-2 mt-6">
          <button
            onclick={`changePage(${safeCurrentPage - 1})`}
            disabled={safeCurrentPage === 1}
            class={`px-3 py-1 rounded-md ${safeCurrentPage === 1 ? 'bg-gray-700 text-gray-500 cursor-not-allowed' : 'bg-amber-700/50 hover:bg-amber-600/60 text-amber-100'}`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 inline text-amber-400"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                clip-rule="evenodd"
              />
            </svg>
          </button>
          <div class="flex items-center gap-1">
            {paginationPages.map((page) => {
              if (page === '...') {
                return <span class="px-2">...</span>;
              }
              return (
                <button
                  onclick={`changePage(${page})`}
                  class={`w-8 h-8 rounded-md ${page === safeCurrentPage ? 'bg-amber-600 text-white' : 'bg-gray-700 hover:bg-gray-600 text-gray-200'}`}
                >
                  {page}
                </button>
              );
            })}
          </div>
          <button
            onclick={`changePage(${safeCurrentPage + 1})`}
            disabled={safeCurrentPage === totalPagesValue}
            class={`px-3 py-1 rounded-md ${safeCurrentPage === totalPagesValue ? 'bg-gray-700 text-gray-500 cursor-not-allowed' : 'bg-amber-700/50 hover:bg-amber-600/60 text-amber-100'}`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 inline text-amber-400"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"
              />
            </svg>
          </button>
        </div>
      )
    }
  </div>
</div>

<script
  define:vars={{
    featuredPlayers,
    rosterData,
    recognitions,
    defaultClassInfo,
    itemsPerPage,
    totalPagesValue,
    safeCurrentPage,
  }}
>
  // Estado
  let currentPage = safeCurrentPage;
  const totalPages = totalPagesValue;
  const classInfoData = defaultClassInfo;
  const recognitionsData = recognitions;

  // Helpers
  const getPlayerData = (playerName) => {
    return rosterData.find((member) => member.name.toLowerCase() === playerName.toLowerCase());
  };

  const getRecognitionText = (player) => {
    if ('recognition' in player) {
      return player.recognition;
    }
    if (player.recognitionIndices && player.recognitionIndices.length > 0) {
      const recogs = player.recognitionIndices
        .map((idx) => recognitionsData[idx]?.title || '')
        .filter(Boolean);
      return recogs.join(' • ');
    }
    return 'Reconocimiento especial';
  };

  const renderPlayerCard = (player) => {
    const playerName = player.playerName || player.name || '';
    const playerData = getPlayerData(playerName);
    if (!playerData) return '';

    const classData = {
      color: playerData.class ? classInfoData[playerData.class]?.color || 'FFFFFF' : 'FFFFFF',
      name: playerData.class || 'Desconocido',
    };

    const recognitionText = getRecognitionText(player);
    
    // Prepare recognitions for the modal
    const featuredRecognitions = player.recognitionIndices
      ? player.recognitionIndices.map((idx) => recognitionsData[idx]).filter(Boolean)
      : [];
    
    // Clone and enrich playerData with recognitions for the modal
    const playerDataForModal = {
      ...playerData,
      recognitions: featuredRecognitions
    };
    const playerString = JSON.stringify(playerDataForModal);

    // Calculate raid stats for this member
    const leaderData = playerData.leaderData || {};
    let totalRaids = 0;
    Object.values(leaderData).forEach((data) => {
      const stats = data.raidStats || {};
      totalRaids += stats.total || 0;
    });

    const recognitionCount = featuredRecognitions.length;

    let recognitionsDescriptions = '';
    if (player.recognitionIndices && player.recognitionIndices.length > 0) {
      recognitionsDescriptions = player.recognitionIndices
        .map((idx) => {
          const recog = recognitionsData[idx];
          if (!recog || !recog.description) return '';
          return `<p class="text-[10px] text-amber-300/70 mt-1 italic leading-tight">${recog.description}</p>`;
        })
        .join('');
    }

    const rankClass = playerData.rank.toLowerCase().includes('general admin')
      ? 'bg-gradient-to-r from-amber-500/10 to-purple-600/10 border-amber-500/40 text-amber-300 hover:bg-amber-500/20 hover:border-amber-400/60'
      : playerData.rank.toLowerCase().includes('oficial')
          ? 'bg-gradient-to-r from-blue-500/10 to-blue-600/10 border-blue-500/40 text-blue-300 hover:bg-blue-500/20 hover:border-blue-400/60'
          : playerData.rank.toLowerCase().includes('explorador')
            ? 'bg-gradient-to-r from-emerald-500/10 to-emerald-600/10 border-emerald-500/40 text-emerald-300 hover:bg-emerald-500/20 hover:border-emerald-400/60'
            : playerData.rank.toLowerCase().includes('iniciado')
              ? 'bg-gradient-to-r from-green-500/10 to-green-600/10 border-green-500/40 text-green-300 hover:bg-green-500/20 hover:border-green-400/60'
              : 'bg-gradient-to-r from-gray-500/10 to-gray-600/10 border-gray-500/40 text-gray-300 hover:bg-gray-500/20 hover:border-gray-400/60';

    return `
      <div 
        x-data="{ expanded: false }"
        class="group relative bg-gradient-to-br from-gray-900/80 to-gray-800/60 backdrop-blur-sm border rounded-lg transition-all duration-300 hover:bg-gray-800/60 hover:shadow-lg hover:shadow-amber-900/20 cursor-pointer overflow-hidden"
        style="border-color: #${classData.color}66;"
        onclick="if(!event.target.closest('.expand-button')) window.openMemberModal(JSON.parse(decodeURIComponent('${encodeURIComponent(playerString)}')))"
        onmouseover="this.style.borderColor='#${classData.color}99'; this.style.boxShadow='0 10px 15px -3px #${classData.color}1a, 0 4px 6px -2px #${classData.color}0a';"
        onmouseout="this.style.borderColor='#${classData.color}66'; this.style.boxShadow='none';"
      >
        <div class="absolute top-0 left-0 w-1 h-full transition-opacity opacity-50 group-hover:opacity-100" style="background-color: #${classData.color};"></div>
        
        <div class="absolute top-2 right-2 flex gap-1 z-10">
          ${recognitionCount > 0 ? `
            <div class="px-1.5 py-0.5 rounded text-[9px] font-bold bg-amber-500/20 text-amber-300 border border-amber-500/30 flex items-center gap-1" title="${recognitionCount} Reconocimientos">
              <svg class="w-2.5 h-2.5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
              <span>${recognitionCount}</span>
            </div>
          ` : ''}
          ${totalRaids > 0 ? `
            <div class="px-1.5 py-0.5 rounded text-[9px] font-bold bg-blue-500/20 text-blue-300 border border-blue-500/30 flex items-center gap-1" title="${totalRaids} raids">
              <svg class="w-2.5 h-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
              <span>${totalRaids}</span>
            </div>
          ` : ''}
          <button 
            @click.stop="expanded = !expanded"
            class="expand-button p-1 rounded bg-gray-800/50 border border-amber-600/30 text-amber-400 hover:text-amber-200 hover:border-amber-500/50 transition-all"
            title="Ver reconocimiento"
          >
            <svg class="w-3 h-3 transform transition-transform" :class="{'rotate-180': expanded}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        
        <div class="p-4 pl-6">
          <div class="flex items-center gap-3">
            <div class="relative flex-shrink-0">
              <img src="/images/avatars/class_${playerData.class || 'default'}.jpg" alt="${playerData.class || 'Clase'}" class="w-12 h-12 rounded-lg shadow-lg border border-gray-700/50 group-hover:border-[#${classData.color}]/50 transition-colors object-cover" onerror="this.src='/images/avatars/default.png'" />
              <div class="absolute -bottom-1 -right-1 w-4 h-4 rounded-lg border-2 border-gray-900 bg-[#${classData.color}]" title="${playerData.class}"></div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="font-bold text-gray-100 truncate group-hover:text-amber-200 transition-colors text-lg capitalize" style="color: #${classData.color}">${playerName}</div>
              <div class="flex flex-wrap items-center gap-2">
                ${playerData.rank ? `<span class="text-[10px] px-2 py-0.5 rounded-lg font-medium border transition-all duration-200 ${rankClass}">${playerData.rank}</span>` : ''}
              </div>
            </div>
          </div>
          <div x-show="expanded" x-collapse x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 transform -translate-y-2" x-transition:enter-end="opacity-100 transform translate-y-0" class="mt-3 pt-3 border-t border-amber-900/20">
            <div class="flex items-start gap-2 bg-amber-900/10 p-2 rounded border border-amber-600/20">
              <svg class="w-4 h-4 text-amber-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <p class="text-[11px] font-bold text-amber-200 uppercase tracking-tight leading-tight">${recognitionText}</p>
                ${recognitionsDescriptions}
              </div>
            </div>
          </div>
        </div>
      </div>
    `;
  };

  const renderPagination = () => {
    const pagination = document.getElementById('featured-players-pagination');
    if (!pagination) return;

    let paginationHTML = `
      <div class="flex items-center justify-center gap-2 mt-6">
        <button 
          onclick="changePage(${currentPage - 1})" 
          ${currentPage === 1 ? 'disabled' : ''}
          class="px-3 py-1 rounded-md ${currentPage === 1 ? 'bg-gray-700 text-gray-500 cursor-not-allowed' : 'bg-amber-700/50 hover:bg-amber-600/60 text-amber-100'}"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline text-amber-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </button>
        <div class="flex items-center gap-1">
    `;

    let startPage = Math.max(1, currentPage - 2);
    let endPage = Math.min(totalPages, startPage + 4);

    if (endPage - startPage < 4) {
      startPage = Math.max(1, endPage - 4);
    }

    if (startPage > 1) {
      paginationHTML += `
        <button 
          onclick="changePage(1)" 
          class="w-8 h-8 rounded-md ${1 === currentPage ? 'bg-amber-600 text-white' : 'bg-gray-700 hover:bg-gray-600 text-gray-200'}"
        >
          1
        </button>
        ${startPage > 2 ? '<span class="px-2">...</span>' : ''}
      `;
    }

    for (let i = startPage; i <= endPage; i++) {
      paginationHTML += `
        <button 
          onclick="changePage(${i})" 
          class="w-8 h-8 rounded-md ${i === currentPage ? 'bg-amber-600 text-white' : 'bg-gray-700 hover:bg-gray-600 text-gray-200'}"
        >
          ${i}
        </button>
      `;
    }

    if (endPage < totalPages) {
      paginationHTML += `
        ${endPage < totalPages - 1 ? '<span class="px-2">...</span>' : ''}
        <button 
          onclick="changePage(${totalPages})" 
          class="w-8 h-8 rounded-md ${totalPages === currentPage ? 'bg-amber-600 text-white' : 'bg-gray-700 hover:bg-gray-600 text-gray-200'}"
        >
          ${totalPages}
        </button>
      `;
    }

    paginationHTML += `
        </div>
        <button 
          onclick="changePage(${currentPage + 1})" 
          ${currentPage === totalPages ? 'disabled' : ''}
          class="px-3 py-1 rounded-md ${currentPage === totalPages ? 'bg-gray-700 text-gray-500 cursor-not-allowed' : 'bg-amber-700/50 hover:bg-amber-600/60 text-amber-100'}"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline text-amber-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    `;

    pagination.innerHTML = paginationHTML;
  };

  const updateDisplay = () => {
    const start = (currentPage - 1) * itemsPerPage;
    const end = start + itemsPerPage;
    const pagePlayers = featuredPlayers.slice(start, end);

    const container = document.getElementById('featured-players-container');
    if (container) {
      container.innerHTML = pagePlayers.map(renderPlayerCard).join('');
    }

    renderPagination();
  };

  window.changePage = (page) => {
    if (page < 1 || page > totalPages) return;
    currentPage = page;
    updateDisplay();
  };
</script>

