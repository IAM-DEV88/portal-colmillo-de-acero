---
// Definir los tipos de datos
interface ClassInfo {
  color: string;
  name: string;
}

interface Recognition {
  title: string;
  description: string;
  icon: string;
}

interface FeaturedPlayer {
  playerName: string;
  recognitionIndices: number[];
}

interface RosterMember {
  name: string;
  class: string;
  rank?: string;
  gearScore?: number;
  [key: string]: any;
}

interface Props {
  featuredPlayers: Array<{
    playerName: string;
    recognitionIndices: number[];
    name?: string; // For backward compatibility
  }>;
  rosterData: RosterMember[];
  recognitions?: Recognition[];
  currentPage?: number;
  totalPages?: number;
}

const {
  featuredPlayers = [],
  rosterData = [],
  recognitions = [],
  currentPage = 1,
} = Astro.props as Props;

// Definir la información de clases por defecto
const defaultClassInfo: Record<string, ClassInfo> = {
  Guerrero: { color: 'C79C6E', name: 'Guerrero' },
  Paladín: { color: 'F58CBA', name: 'Paladín' },
  Cazador: { color: 'ABD473', name: 'Cazador' },
  Pícaro: { color: 'FFF569', name: 'Pícaro' },
  Sacerdote: { color: 'FFFFFF', name: 'Sacerdote' },
  'Caballero de la Muerte': { color: 'C41F3B', name: 'Caballero de la Muerte' },
  Chamán: { color: '0070DE', name: 'Chamán' },
  Mago: { color: '69CCF0', name: 'Mago' },
  Brujo: { color: '9482C9', name: 'Brujo' },
  Druida: { color: 'FF7D0A', name: 'Druida' },
};

// Configuración de paginación
const itemsPerPage = 6;
const totalPagesValue = Math.ceil(featuredPlayers.length / itemsPerPage) || 1;
const safeCurrentPage = Math.max(1, Math.min(currentPage, totalPagesValue));

// Calcular páginas para la paginación
let startPage = Math.max(1, safeCurrentPage - 2);
let endPage = Math.min(totalPagesValue, startPage + 4);

if (endPage - startPage < 4) {
  startPage = Math.max(1, endPage - 4);
}

const paginationPages = [];
if (startPage > 1) {
  paginationPages.push(1);
  if (startPage > 2) paginationPages.push('...');
}

for (let i = startPage; i <= endPage; i++) {
  paginationPages.push(i);
}

if (endPage < totalPagesValue) {
  if (endPage < totalPagesValue - 1) paginationPages.push('...');
  paginationPages.push(totalPagesValue);
}

// Función para obtener los datos del jugador del roster
const getPlayerData = (playerName: string): RosterMember | undefined => {
  return rosterData.find((member) => member.name.toLowerCase() === playerName.toLowerCase());
};

// Función para obtener el nombre del jugador
const getPlayerName = (player: any): string => {
  return player.playerName || player.name || '';
};

// Función para obtener el texto de reconocimiento
const getRecognitionText = (player: any): string => {
  if ('recognition' in player) {
    return player.recognition;
  }
  if (player.recognitionIndices && player.recognitionIndices.length > 0) {
    const recogs = player.recognitionIndices
      .map((idx: number) => recognitions[idx]?.title || '')
      .filter(Boolean);
    return recogs.join(' • ');
  }
  return 'Reconocimiento especial';
};

// Obtener jugadores de la página actual para SSR
const initialPlayers = featuredPlayers.slice(
  (safeCurrentPage - 1) * itemsPerPage,
  safeCurrentPage * itemsPerPage
);

// Si no hay jugadores destacados, no mostrar la sección
if (!featuredPlayers.length) return null;
---

<div
  class="mb-8 bg-gradient-to-br from-amber-900/20 via-gray-900/40 to-amber-800/10 backdrop-blur-sm border border-amber-600/30 rounded-2xl p-6 sm:p-8 shadow-2xl"
>
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-8 gap-4">
    <div class="flex items-center space-x-3">
      <div
        class="w-12 h-12 bg-gradient-to-br from-amber-500 to-amber-600 rounded-xl flex items-center justify-center shadow-lg"
      >
        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
          ></path>
        </svg>
      </div>
      <div>
        <h2 class="text-2xl sm:text-3xl font-bold text-amber-200 uppercase tracking-wide">
          Jugadores Destacados
        </h2>
        <p class="text-sm text-amber-300/60 mt-0.5">Del mes actual</p>
      </div>
    </div>
    <a
      href="/hall-of-fame"
      class="group flex items-center gap-2 px-4 py-2 bg-amber-600/20 hover:bg-amber-600/30 border border-amber-500/40 hover:border-amber-500/60 rounded-lg text-amber-200 hover:text-amber-100 text-sm font-medium transition-all duration-300"
      title="Ver todos los jugadores destacados"
    >
      <span>Ver Hall of Fame</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 group-hover:translate-x-1 transition-transform"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>

  <div id="featured-players-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
    {
      initialPlayers.map((player) => {
        const playerName = getPlayerName(player);
        const playerData = getPlayerData(playerName);
        if (!playerData) return null;

        const classData = {
          color: playerData.class
            ? defaultClassInfo[playerData.class]?.color || 'FFFFFF'
            : 'FFFFFF',
          name: playerData.class || 'Desconocido',
        };

        const recognitionText = getRecognitionText(player);

        return (
          <div class="group relative bg-gradient-to-br from-gray-900/80 to-gray-800/60 backdrop-blur-sm border border-amber-700/30 rounded-xl p-5 hover:border-amber-500/60 transition-all duration-300 hover:shadow-xl hover:shadow-amber-500/10 hover:-translate-y-1">
            <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-amber-500/10 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-300" />

            <div class="relative">
              <div class="flex items-start gap-4 mb-4">
                <div class="relative flex-shrink-0">
                  <div class="absolute inset-0 bg-gradient-to-br from-amber-500/40 to-amber-600/40 rounded-full blur-md group-hover:blur-lg transition-all duration-300" />
                  <div class="relative w-16 h-16 rounded-full border-3 border-amber-500/60 overflow-hidden shadow-lg">
                    <img
                      src={`/images/avatars/class_${playerData.class || 'default'}.jpg`}
                      alt={playerData.class || 'Clase'}
                      class="w-full h-full object-cover"
                      onError="this.src='/images/avatars/default.png'"
                    />
                  </div>
                  <div class="absolute -bottom-1 -right-1 w-7 h-7 bg-gradient-to-br from-amber-400 to-amber-600 rounded-full flex items-center justify-center border-2 border-gray-900 shadow-lg">
                    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  </div>
                </div>

                <div class="flex-1 min-w-0">
                  <h3
                    class="text-xl font-bold truncate mb-1 drop-shadow-lg"
                    style={`color: #${classData.color}`}
                  >
                    {playerName}
                  </h3>
                  <div class="flex flex-wrap items-center gap-2">
                    {playerData.rank && (
                      <span class="inline-flex items-center px-2.5 py-1 bg-amber-600/30 border border-amber-500/50 text-amber-200 text-xs font-semibold rounded-full">
                        {playerData.rank}
                      </span>
                    )}
                    <span class="inline-flex items-center px-2.5 py-1 bg-gray-700/50 border border-gray-600/50 text-gray-300 text-xs font-medium rounded-full">
                      {classData.name}
                    </span>
                  </div>
                </div>
              </div>

              <div class="mb-3 pb-3 border-b border-amber-900/30">
                <div class="flex items-center gap-2">
                  <svg
                    class="w-4 h-4 text-amber-400 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <p class="text-sm font-semibold text-amber-100">{recognitionText}</p>
                </div>
              </div>

              {player.recognitionIndices?.length > 0 && (
                <div class="space-y-2">
                  {player.recognitionIndices.map((idx: number) => {
                    const recog = recognitions[idx];
                    if (!recog) return null;
                    return (
                      <div class="flex items-start gap-2 text-xs text-amber-100/70 leading-relaxed">
                        <svg
                          class="w-4 h-4 text-amber-400/60 flex-shrink-0 mt-0.5"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <span class="flex-1">{recog.description}</span>
                      </div>
                    );
                  })}
                </div>
              )}
            </div>
          </div>
        );
      })
    }
  </div>

  <div id="featured-players-pagination" class="mt-8">
    {/* Controles de paginación iniciales (SSR) */}
    {
      totalPagesValue > 1 && (
        <div class="flex items-center justify-center gap-2 mt-6">
          <button
            onclick={`changePage(${safeCurrentPage - 1})`}
            disabled={safeCurrentPage === 1}
            class={`px-3 py-1 rounded-md ${safeCurrentPage === 1 ? 'bg-gray-700 text-gray-500 cursor-not-allowed' : 'bg-amber-700/50 hover:bg-amber-600/60 text-amber-100'}`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 inline text-amber-400"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                clip-rule="evenodd"
              />
            </svg>
          </button>
          <div class="flex items-center gap-1">
            {paginationPages.map((page) => {
              if (page === '...') {
                return <span class="px-2">...</span>;
              }
              return (
                <button
                  onclick={`changePage(${page})`}
                  class={`w-8 h-8 rounded-md ${page === safeCurrentPage ? 'bg-amber-600 text-white' : 'bg-gray-700 hover:bg-gray-600 text-gray-200'}`}
                >
                  {page}
                </button>
              );
            })}
          </div>
          <button
            onclick={`changePage(${safeCurrentPage + 1})`}
            disabled={safeCurrentPage === totalPagesValue}
            class={`px-3 py-1 rounded-md ${safeCurrentPage === totalPagesValue ? 'bg-gray-700 text-gray-500 cursor-not-allowed' : 'bg-amber-700/50 hover:bg-amber-600/60 text-amber-100'}`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 inline text-amber-400"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"
              />
            </svg>
          </button>
        </div>
      )
    }
  </div>
</div>

<script
  define:vars={{
    featuredPlayers,
    rosterData,
    recognitions,
    defaultClassInfo,
    itemsPerPage,
    totalPagesValue,
    safeCurrentPage,
  }}
>
  // Estado
  let currentPage = safeCurrentPage;
  const totalPages = totalPagesValue;
  const classInfoData = defaultClassInfo;
  const recognitionsData = recognitions;

  // Helpers
  const getPlayerData = (playerName) => {
    return rosterData.find((member) => member.name.toLowerCase() === playerName.toLowerCase());
  };

  const getRecognitionText = (player) => {
    if ('recognition' in player) {
      return player.recognition;
    }
    if (player.recognitionIndices && player.recognitionIndices.length > 0) {
      const recogs = player.recognitionIndices
        .map((idx) => recognitionsData[idx]?.title || '')
        .filter(Boolean);
      return recogs.join(' • ');
    }
    return 'Reconocimiento especial';
  };

  const renderPlayerCard = (player) => {
    const playerName = player.playerName || player.name || '';
    const playerData = getPlayerData(playerName);
    if (!playerData) return '';

    const classData = {
      color: playerData.class ? classInfoData[playerData.class]?.color || 'FFFFFF' : 'FFFFFF',
      name: playerData.class || 'Desconocido',
    };

    const recognitionText = getRecognitionText(player);

    let recognitionsHtml = '';
    if (player.recognitionIndices && player.recognitionIndices.length > 0) {
      recognitionsHtml = `<div class="space-y-2">
        ${player.recognitionIndices
          .map((idx) => {
            const recog = recognitionsData[idx];
            if (!recog) return '';
            return `<div class="flex items-start gap-2 text-xs text-amber-100/70 leading-relaxed">
            <svg class="w-4 h-4 text-amber-400/60 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="flex-1">${recog.description}</span>
          </div>`;
          })
          .join('')}
      </div>`;
    }

    return `
      <div class="group relative bg-gradient-to-br from-gray-900/80 to-gray-800/60 backdrop-blur-sm border border-amber-700/30 rounded-xl p-5 hover:border-amber-500/60 transition-all duration-300 hover:shadow-xl hover:shadow-amber-500/10 hover:-translate-y-1">
        <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-amber-500/10 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="relative">
          <div class="flex items-start gap-4 mb-4">
            <div class="relative flex-shrink-0">
              <div class="absolute inset-0 bg-gradient-to-br from-amber-500/40 to-amber-600/40 rounded-full blur-md group-hover:blur-lg transition-all duration-300"></div>
              <div class="relative w-16 h-16 rounded-full border-3 border-amber-500/60 overflow-hidden shadow-lg">
                <img src="/images/avatars/class_${playerData.class || 'default'}.jpg" alt="${playerData.class || 'Clase'}" class="w-full h-full object-cover" onerror="this.src='/images/avatars/default.png'" />
              </div>
              <div class="absolute -bottom-1 -right-1 w-7 h-7 bg-gradient-to-br from-amber-400 to-amber-600 rounded-full flex items-center justify-center border-2 border-gray-900 shadow-lg">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-xl font-bold truncate mb-1 drop-shadow-lg" style="color: #${classData.color}">
                ${playerName}
              </h3>
              <div class="flex flex-wrap items-center gap-2">
                ${playerData.rank ? `<span class="inline-flex items-center px-2.5 py-1 bg-amber-600/30 border border-amber-500/50 text-amber-200 text-xs font-semibold rounded-full">${playerData.rank}</span>` : ''}
                <span class="inline-flex items-center px-2.5 py-1 bg-gray-700/50 border border-gray-600/50 text-gray-300 text-xs font-medium rounded-full">${classData.name}</span>
              </div>
            </div>
          </div>
          <div class="mb-3 pb-3 border-b border-amber-900/30">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-amber-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <p class="text-sm font-semibold text-amber-100">${recognitionText}</p>
            </div>
          </div>
          ${recognitionsHtml}
        </div>
      </div>
    `;
  };

  const renderPagination = () => {
    const pagination = document.getElementById('featured-players-pagination');
    if (!pagination) return;

    let paginationHTML = `
      <div class="flex items-center justify-center gap-2 mt-6">
        <button 
          onclick="changePage(${currentPage - 1})" 
          ${currentPage === 1 ? 'disabled' : ''}
          class="px-3 py-1 rounded-md ${currentPage === 1 ? 'bg-gray-700 text-gray-500 cursor-not-allowed' : 'bg-amber-700/50 hover:bg-amber-600/60 text-amber-100'}"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline text-amber-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </button>
        <div class="flex items-center gap-1">
    `;

    let startPage = Math.max(1, currentPage - 2);
    let endPage = Math.min(totalPages, startPage + 4);

    if (endPage - startPage < 4) {
      startPage = Math.max(1, endPage - 4);
    }

    if (startPage > 1) {
      paginationHTML += `
        <button 
          onclick="changePage(1)" 
          class="w-8 h-8 rounded-md ${1 === currentPage ? 'bg-amber-600 text-white' : 'bg-gray-700 hover:bg-gray-600 text-gray-200'}"
        >
          1
        </button>
        ${startPage > 2 ? '<span class="px-2">...</span>' : ''}
      `;
    }

    for (let i = startPage; i <= endPage; i++) {
      paginationHTML += `
        <button 
          onclick="changePage(${i})" 
          class="w-8 h-8 rounded-md ${i === currentPage ? 'bg-amber-600 text-white' : 'bg-gray-700 hover:bg-gray-600 text-gray-200'}"
        >
          ${i}
        </button>
      `;
    }

    if (endPage < totalPages) {
      paginationHTML += `
        ${endPage < totalPages - 1 ? '<span class="px-2">...</span>' : ''}
        <button 
          onclick="changePage(${totalPages})" 
          class="w-8 h-8 rounded-md ${totalPages === currentPage ? 'bg-amber-600 text-white' : 'bg-gray-700 hover:bg-gray-600 text-gray-200'}"
        >
          ${totalPages}
        </button>
      `;
    }

    paginationHTML += `
        </div>
        <button 
          onclick="changePage(${currentPage + 1})" 
          ${currentPage === totalPages ? 'disabled' : ''}
          class="px-3 py-1 rounded-md ${currentPage === totalPages ? 'bg-gray-700 text-gray-500 cursor-not-allowed' : 'bg-amber-700/50 hover:bg-amber-600/60 text-amber-100'}"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline text-amber-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    `;

    pagination.innerHTML = paginationHTML;
  };

  const updateDisplay = () => {
    const start = (currentPage - 1) * itemsPerPage;
    const end = start + itemsPerPage;
    const pagePlayers = featuredPlayers.slice(start, end);

    const container = document.getElementById('featured-players-container');
    if (container) {
      container.innerHTML = pagePlayers.map(renderPlayerCard).join('');
    }

    renderPagination();
  };

  window.changePage = (page) => {
    if (page < 1 || page > totalPages) return;
    currentPage = page;
    updateDisplay();
  };
</script>

<style>
  .featured-player {
