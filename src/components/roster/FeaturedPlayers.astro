---
// Definir los tipos de datos
interface ClassInfo {
  color: string;
  name: string;
}

interface Recognition {
  title: string;
  description: string;
  icon: string;
}

interface FeaturedPlayer {
  playerName: string;
  recognitionIndices: number[];
}

interface RosterMember {
  name: string;
  class: string;
  rank?: string;
  gearScore?: number;
  [key: string]: any;
}

interface Props {
  featuredPlayers: Array<{
    playerName: string;
    recognitionIndices: number[];
    name?: string; // For backward compatibility
  }>;
  rosterData: RosterMember[];
  recognitions?: Recognition[];
  currentPage?: number;
  totalPages?: number;
}

const {
  featuredPlayers = [],
  rosterData = [],
  recognitions = [],
  currentPage = 1,
} = Astro.props as Props;

// Definir la información de clases por defecto
const defaultClassInfo: Record<string, ClassInfo> = {
  Guerrero: { color: 'C79C6E', name: 'Guerrero' },
  Paladín: { color: 'F58CBA', name: 'Paladín' },
  Cazador: { color: 'ABD473', name: 'Cazador' },
  Pícaro: { color: 'FFF569', name: 'Pícaro' },
  Sacerdote: { color: 'FFFFFF', name: 'Sacerdote' },
  'Caballero de la Muerte': { color: 'C41F3B', name: 'Caballero de la Muerte' },
  Chamán: { color: '0070DE', name: 'Chamán' },
  Mago: { color: '69CCF0', name: 'Mago' },
  Brujo: { color: '9482C9', name: 'Brujo' },
  Druida: { color: 'FF7D0A', name: 'Druida' },
};

// Configuración de paginación
const itemsPerPage = 6;
const totalPagesValue = Math.ceil(featuredPlayers.length / itemsPerPage) || 1;
const safeCurrentPage = Math.max(1, Math.min(currentPage, totalPagesValue));

// Calcular páginas para la paginación
let startPage = Math.max(1, safeCurrentPage - 2);
let endPage = Math.min(totalPagesValue, startPage + 4);

if (endPage - startPage < 4) {
  startPage = Math.max(1, endPage - 4);
}

const paginationPages = [];
if (startPage > 1) {
  paginationPages.push(1);
  if (startPage > 2) paginationPages.push('...');
}

for (let i = startPage; i <= endPage; i++) {
  paginationPages.push(i);
}

if (endPage < totalPagesValue) {
  if (endPage < totalPagesValue - 1) paginationPages.push('...');
  paginationPages.push(totalPagesValue);
}

// Función para obtener los datos del jugador del roster
const getPlayerData = (playerName: string): RosterMember | undefined => {
  return rosterData.find((member) => member.name.toLowerCase() === playerName.toLowerCase());
};

// Función para obtener el nombre del jugador
const getPlayerName = (player: any): string => {
  return player.playerName || player.name || '';
};

// Función para obtener el texto de reconocimiento
const getRecognitionText = (player: any, historicalRecognitions: any[] = []): string => {
  if ('recognition' in player) {
    return player.recognition;
  }
  
  // Si tenemos reconocimientos históricos (que ya incluyen el título), los usamos
  if (historicalRecognitions.length > 0) {
    return historicalRecognitions
      .map(rec => rec.title)
      .filter((value, index, self) => self.indexOf(value) === index) // Unique titles
      .join(' • ');
  }

  if (player.recognitionIndices && player.recognitionIndices.length > 0) {
    const recogs = player.recognitionIndices
      .map((idx: number) => recognitions[idx]?.title || '')
      .filter(Boolean);
    return recogs.join(' • ');
  }
  return 'Reconocimiento especial';
};

// Obtener jugadores de la página actual para SSR
const initialPlayers = featuredPlayers.slice(
  (safeCurrentPage - 1) * itemsPerPage,
  safeCurrentPage * itemsPerPage
);

// La sección siempre se muestra, incluso si no hay jugadores destacados
---

<div
  class="bg-gradient-to-br from-amber-900/10 via-gray-900/40 to-amber-800/5 backdrop-blur-md border border-amber-600/20 rounded-3xl p-6 sm:p-10 shadow-2xl relative"
>
  <!-- Decorative background elements - wrapped in a container with overflow-hidden -->
  <div class="absolute inset-0 rounded-3xl overflow-hidden pointer-events-none">
    <div class="absolute -top-24 -right-24 w-64 h-64 bg-amber-600/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-24 -left-24 w-64 h-64 bg-amber-700/5 rounded-full blur-3xl"></div>
  </div>

  <div class="flex flex-col md:flex-row md:justify-between md:items-end mb-10 gap-6 relative z-10">
    <div class="flex items-center space-x-5">
      <div
        class="w-16 h-16 bg-gradient-to-br from-amber-400 to-amber-600 rounded-2xl flex items-center justify-center shadow-2xl shadow-amber-900/40 transform -rotate-3 hover:rotate-0 transition-transform duration-300"
      >
        <svg class="w-9 h-9 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
          ></path>
        </svg>
      </div>
      <div>
        <h2 class="text-3xl sm:text-4xl font-black text-transparent bg-clip-text bg-gradient-to-r from-amber-200 via-amber-400 to-amber-200 uppercase tracking-tighter italic">
          Hall de la Fama
        </h2>
        <p class="text-amber-300/60 font-medium tracking-widest uppercase text-xs mt-1">Excelencia y Compromiso • {new Intl.DateTimeFormat('es-ES', { month: 'long', year: 'numeric' }).format(new Date())}</p>
      </div>
    </div>
    
    <div class="hidden md:block">
      <div class="bg-gray-800/40 backdrop-blur-sm border border-amber-600/20 rounded-full px-4 py-1.5 text-[10px] text-amber-300/80 uppercase tracking-widest font-bold">
        Miembros Destacados de la Hermandad
      </div>
    </div>
  </div>

  <div id="featured-players-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 relative z-10">
    {
      initialPlayers.map((player) => {
        const playerName = getPlayerName(player);
        const playerData = getPlayerData(playerName);
        if (!playerData) return null;

        const classData = {
          color: playerData.class
            ? defaultClassInfo[playerData.class]?.color || 'FFFFFF'
            : 'FFFFFF',
          name: playerData.class || 'Desconocido',
        };

        const playerRecognitions = playerData.recognitions || [];
        const recognitionText = getRecognitionText(player, playerRecognitions);
        
        const featuredRecognitions = player.recognitionIndices
          ? player.recognitionIndices.map((idx: number) => recognitions[idx]).filter(Boolean)
          : [];
        
        // Use full historical recognitions for the modal
        const playerDataForModal = {
          ...playerData,
          recognitions: playerRecognitions.length > 0 ? playerRecognitions : featuredRecognitions
        };
        const playerString = JSON.stringify(playerDataForModal);

        // Calculate raid stats for this member
        const leaderData = playerData.leaderData || {};
        let totalRaids = 0;
        Object.values(leaderData).forEach((data: any) => {
          const stats = data.raidStats || {};
          totalRaids += stats.total || 0;
        });

        // Use the total historical recognition count for the badge
        const recognitionCount = playerRecognitions.length;

        return (
          <div 
            x-data="{ expanded: false }"
            class="group relative bg-gray-900/40 backdrop-blur-md border border-amber-900/30 rounded-2xl transition-all duration-500 hover:bg-gray-800/60 hover:border-amber-500/40 hover:shadow-2xl hover:shadow-amber-900/20 cursor-pointer overflow-visible"
            :class="{'z-[60] scale-[1.02] border-amber-500/50 bg-gray-800/80 shadow-amber-900/40': expanded}"
            onclick={`if(!event.target.closest('.expand-button')) window.openMemberModal(JSON.parse(decodeURIComponent('${encodeURIComponent(playerString)}')))`}
          >
            <!-- Background glow on hover -->
            <div class="absolute -right-8 -top-8 w-24 h-24 bg-amber-500/5 rounded-full blur-2xl group-hover:bg-amber-500/10 transition-colors duration-500"></div>

            <!-- Class color accent line -->
            <div class="absolute top-0 left-0 w-1 h-full opacity-20 group-hover:opacity-100 transition-opacity rounded-l-2xl" style={`background-color: #${classData.color};`}></div>
            
            <div class="absolute top-3 right-3 flex items-center gap-1.5 z-10">
              {recognitionCount > 0 && (
                <div class="h-6 px-2 rounded-lg text-[10px] font-bold bg-amber-500/10 text-amber-400 border border-amber-500/20 flex items-center gap-1 backdrop-blur-md shadow-sm" title={`${recognitionCount} Reconocimientos`}>
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                  <span>{recognitionCount}</span>
                </div>
              )}
            </div>
            
            <div class="p-5 pl-7 relative z-10">
              <div class="flex items-center gap-4">
                <!-- Avatar with ring -->
                <div class="relative flex-shrink-0 group-hover:scale-110 transition-transform duration-500">
                  <div class="absolute -inset-1.5 bg-gradient-to-br from-amber-500/30 to-transparent rounded-2xl blur-sm group-hover:blur-md transition-all"></div>
                  <img
                    src={`/images/avatars/class_${playerData.class || 'default'}.jpg`}
                    alt={playerData.class || 'Clase'}
                    class="w-14 h-14 rounded-xl shadow-2xl border border-amber-500/20 relative z-10 object-cover"
                    onerror="this.src='/images/avatars/default.png'"
                  />
                  <div class="absolute -bottom-1 -right-1 w-5 h-5 rounded-lg border-2 border-gray-900 bg-white shadow-lg z-20 flex items-center justify-center overflow-hidden" title={playerData.class}>
                    <div class="w-full h-full" style={`background-color: #${classData.color}`}></div>
                  </div>
                </div>

                <!-- Info -->
                <div class="flex-1 min-w-0">
                  <div class="text-[10px] font-bold tracking-[0.2em] text-amber-500/60 uppercase mb-0.5">Jugador Elite</div>
                  <div class="font-black text-xl tracking-tight truncate group-hover:translate-x-1 transition-transform duration-300 uppercase italic" style={`color: #${classData.color}; text-shadow: 0 0 20px #${classData.color}33;`}>
                    {playerName}
                  </div>
                  <div class="flex items-center gap-2 mt-1">
                    <span class={`text-[9px] px-2 py-0.5 rounded-md font-black uppercase tracking-tighter border shadow-sm ${
                      playerData.rank.toLowerCase().includes('general admin')
                        ? 'bg-amber-500/10 border-amber-500/30 text-amber-400 shadow-amber-900/20'
                        : playerData.rank.toLowerCase().includes('oficial')
                            ? 'bg-blue-500/10 border-blue-500/30 text-blue-400 shadow-blue-900/20'
                            : 'bg-gray-800/40 border-white/10 text-gray-400'
                    }`}>
                      {playerData.rank}
                    </span>
                  </div>
                </div>
              </div>

              <!-- Expandable Recognition Description Overlay -->
              <div 
                x-show="expanded" 
                x-transition:enter="transition ease-out duration-300"
                x-transition:enter-start="opacity-0 transform -translate-y-2 scale-95"
                x-transition:enter-end="opacity-100 transform translate-y-0 scale-100"
                x-transition:leave="transition ease-in duration-200"
                x-transition:leave-start="opacity-100 transform translate-y-0 scale-100"
                x-transition:leave-end="opacity-0 transform -translate-y-2 scale-95"
                class="absolute top-full left-0 w-full z-50 mt-2 px-2"
                @click.stop
              >
                <div class="flex items-start gap-3 bg-gray-900/95 backdrop-blur-xl p-4 rounded-xl border border-amber-500/30 shadow-2xl shadow-black">
                  <div class="w-8 h-8 bg-amber-500/20 rounded-lg flex-shrink-0 flex items-center justify-center">
                    <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <p class="text-xs font-bold text-amber-200 uppercase tracking-wider leading-tight mb-1">{recognitionText}</p>
                    {player.recognitionIndices && player.recognitionIndices.map((idx: number) => (
                      recognitions[idx]?.description && (
                        <p class="text-[10px] text-amber-300/60 italic leading-relaxed">{recognitions[idx].description}</p>
                      )
                    ))}
                  </div>
                </div>
              </div>
            </div>
            <!-- Expand Button -->
            <div class="absolute bottom-3 right-3 z-20">
              <button 
                @click.stop="expanded = !expanded"
                class="expand-button w-8 h-8 rounded-full bg-gray-900/80 border border-amber-500/20 text-amber-500/60 hover:text-amber-400 hover:border-amber-500/50 transition-all flex items-center justify-center shadow-md"
                title="Ver reconocimiento"
              >
                <svg class="w-4 h-4 transform transition-transform duration-300" :class="{'rotate-180 text-amber-400': expanded}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
            </div>
          </div>
        );
      })
    }
  </div>

  <div id="featured-players-pagination" class="mt-8">
    {/* Controles de paginación iniciales (SSR) */}
    {
      totalPagesValue > 1 && (
        <div class="flex items-center justify-center gap-2 mt-6">
          <button
            onclick={`changePage(${safeCurrentPage - 1})`}
            disabled={safeCurrentPage === 1}
            class={`px-3 py-1 rounded-md transition-all duration-300 ${safeCurrentPage === 1 ? 'bg-gray-800/50 text-gray-600 cursor-not-allowed' : 'bg-amber-700/40 hover:bg-amber-600/60 text-amber-100 shadow-lg shadow-amber-900/20'}`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 inline text-amber-400"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                clip-rule="evenodd"
              />
            </svg>
          </button>
          <div class="flex items-center gap-1.5">
            {paginationPages.map((page) => {
              if (page === '...') {
                return <span class="px-1 text-gray-600">...</span>;
              }
              return (
                <button
                  onclick={`changePage(${page})`}
                  class={`w-8 h-8 rounded-md transition-all duration-300 ${page === safeCurrentPage ? 'bg-gradient-to-br from-amber-500 to-amber-700 text-white shadow-lg shadow-amber-900/40 font-bold' : 'bg-gray-800/60 hover:bg-gray-700 text-gray-400 hover:text-amber-200'}`}
                >
                  {page}
                </button>
              );
            })}
          </div>
          <button
            onclick={`changePage(${safeCurrentPage + 1})`}
            disabled={safeCurrentPage === totalPagesValue}
            class={`px-3 py-1 rounded-md transition-all duration-300 ${safeCurrentPage === totalPagesValue ? 'bg-gray-800/50 text-gray-600 cursor-not-allowed' : 'bg-amber-700/40 hover:bg-amber-600/60 text-amber-100 shadow-lg shadow-amber-900/20'}`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 inline text-amber-400"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"
              />
            </svg>
          </button>
        </div>
      )
    }
  </div>
</div>

<script
  define:vars={{
    featuredPlayers,
    rosterData,
    recognitions,
    defaultClassInfo,
    itemsPerPage,
    totalPagesValue,
    safeCurrentPage,
  }}
>
  // Estado
  let currentPage = safeCurrentPage;
  const totalPages = totalPagesValue;
  const classInfoData = defaultClassInfo;
  const recognitionsData = recognitions;

  // Helpers
  const getPlayerData = (playerName) => {
    return rosterData.find((member) => member.name.toLowerCase() === playerName.toLowerCase());
  };

  const getRecognitionText = (player) => {
    if ('recognition' in player) {
      return player.recognition;
    }
    if (player.recognitionIndices && player.recognitionIndices.length > 0) {
      const recogs = player.recognitionIndices
        .map((idx) => recognitionsData[idx]?.title || '')
        .filter(Boolean);
      return recogs.join(' • ');
    }
    return 'Reconocimiento especial';
  };

  const renderPlayerCard = (player) => {
    const playerName = player.playerName || player.name || '';
    const playerData = getPlayerData(playerName);
    if (!playerData) return '';

    const classData = {
      color: playerData.class ? classInfoData[playerData.class]?.color || 'FFFFFF' : 'FFFFFF',
      name: playerData.class || 'Desconocido',
    };

    const recognitionText = getRecognitionText(player);
    
    // Prepare recognitions for the modal
    const featuredRecognitions = player.recognitionIndices
      ? player.recognitionIndices.map((idx) => recognitionsData[idx]).filter(Boolean)
      : [];
    
    // Clone and enrich playerData with recognitions for the modal
    const playerDataForModal = {
      ...playerData,
      recognitions: featuredRecognitions
    };
    const playerString = JSON.stringify(playerDataForModal);

    // Calculate raid stats for this member
    const leaderData = playerData.leaderData || {};
    let totalRaids = 0;
    Object.values(leaderData).forEach((data) => {
      const stats = data.raidStats || {};
      totalRaids += stats.total || 0;
    });

    const recognitionCount = featuredRecognitions.length;

    let recognitionsDescriptions = '';
    if (player.recognitionIndices && player.recognitionIndices.length > 0) {
      recognitionsDescriptions = player.recognitionIndices
        .map((idx) => {
          const recog = recognitionsData[idx];
          if (!recog || !recog.description) return '';
          return `<p class="text-[10px] text-amber-300/60 italic leading-relaxed">${recog.description}</p>`;
        })
        .join('');
    }

    const rankClass = playerData.rank.toLowerCase().includes('general admin')
      ? 'bg-amber-500/10 border-amber-500/30 text-amber-400 shadow-amber-900/20'
      : playerData.rank.toLowerCase().includes('oficial')
          ? 'bg-blue-500/10 border-blue-500/30 text-blue-400 shadow-blue-900/20'
          : 'bg-gray-800/40 border-white/10 text-gray-400';

    return `
      <div 
        x-data="{ expanded: false }"
        class="group relative bg-gray-900/40 backdrop-blur-md border border-amber-900/30 rounded-2xl transition-all duration-500 hover:bg-gray-800/60 hover:border-amber-500/40 hover:shadow-2xl hover:shadow-amber-900/20 cursor-pointer overflow-visible"
        :class="{'z-[60] scale-[1.02] border-amber-500/50 bg-gray-800/80 shadow-amber-900/40': expanded}"
        onclick="if(!event.target.closest('.expand-button')) window.openMemberModal(JSON.parse(decodeURIComponent('${encodeURIComponent(playerString)}')))"
      >
        <div class="absolute -right-8 -top-8 w-24 h-24 bg-amber-500/5 rounded-full blur-2xl group-hover:bg-amber-500/10 transition-colors duration-500"></div>
        <div class="absolute top-0 left-0 w-1 h-full opacity-20 group-hover:opacity-100 transition-opacity rounded-l-2xl" style="background-color: #${classData.color};"></div>
        
        <div class="absolute top-3 right-3 flex items-center gap-1.5 z-10">
          ${recognitionCount > 0 ? `
            <div class="h-6 px-2 rounded-lg text-[10px] font-bold bg-amber-500/10 text-amber-400 border border-amber-500/20 flex items-center gap-1 backdrop-blur-md shadow-sm" title="${recognitionCount} Reconocimientos">
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
              <span>${recognitionCount}</span>
            </div>
          ` : ''}
          <button 
            @click.stop="expanded = !expanded"
            class="expand-button w-6 h-6 rounded-lg bg-gray-900/80 border border-amber-500/20 text-amber-500/60 hover:text-amber-400 hover:border-amber-500/50 transition-all flex items-center justify-center shadow-sm"
            title="Ver reconocimiento"
          >
            <svg class="w-3.5 h-3.5 transform transition-transform duration-300" :class="{'rotate-180 text-amber-400': expanded}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        
        <div class="p-5 pl-7 relative z-10">
          <div class="flex items-center gap-4">
            <div class="relative flex-shrink-0 group-hover:scale-110 transition-transform duration-500">
              <div class="absolute -inset-1.5 bg-gradient-to-br from-amber-500/30 to-transparent rounded-2xl blur-sm group-hover:blur-md transition-all"></div>
              <img src="/images/avatars/class_${playerData.class || 'default'}.jpg" alt="${playerData.class || 'Clase'}" class="w-14 h-14 rounded-xl shadow-2xl border border-amber-500/20 relative z-10 object-cover" onerror="this.src='/images/avatars/default.png'" />
              <div class="absolute -bottom-1 -right-1 w-5 h-5 rounded-lg border-2 border-gray-900 bg-white shadow-lg z-20 flex items-center justify-center overflow-hidden" title="${playerData.class}">
                <div class="w-full h-full" style="background-color: #${classData.color}"></div>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="text-[10px] font-bold tracking-[0.2em] text-amber-500/60 uppercase mb-0.5">Jugador Elite</div>
              <div class="font-black text-xl tracking-tight truncate group-hover:translate-x-1 transition-transform duration-300 uppercase italic" style="color: #${classData.color}; text-shadow: 0 0 20px #${classData.color}33;">${playerName}</div>
              <div class="flex items-center gap-2 mt-1">
                ${playerData.rank ? `<span class="text-[9px] px-2 py-0.5 rounded-md font-black uppercase tracking-tighter border shadow-sm ${rankClass}">${playerData.rank}</span>` : ''}
              </div>
            </div>
          </div>
          <div 
            x-show="expanded" 
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 transform -translate-y-2 scale-95"
            x-transition:enter-end="opacity-100 transform translate-y-0 scale-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100 transform translate-y-0 scale-100"
            x-transition:leave-end="opacity-0 transform -translate-y-2 scale-95"
            class="absolute top-full left-0 w-full z-50 mt-2 px-2"
            @click.stop
          >
            <div class="flex items-start gap-3 bg-gray-900/95 backdrop-blur-xl p-4 rounded-xl border border-amber-500/30 shadow-2xl shadow-black">
              <div class="w-8 h-8 bg-amber-500/20 rounded-lg flex-shrink-0 flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-xs font-bold text-amber-200 uppercase tracking-wider leading-tight mb-1">${recognitionText}</p>
                ${recognitionsDescriptions}
              </div>
            </div>
          </div>
        </div>
      </div>
    `;
  };

  const renderPagination = () => {
    const pagination = document.getElementById('featured-players-pagination');
    if (!pagination) return;

    let paginationHTML = `
      <div class="flex items-center justify-center gap-2 mt-6">
        <button 
          onclick="changePage(${currentPage - 1})" 
          ${currentPage === 1 ? 'disabled' : ''}
          class="px-3 py-1 rounded-md transition-all duration-300 ${currentPage === 1 ? 'bg-gray-800/50 text-gray-600 cursor-not-allowed' : 'bg-amber-700/40 hover:bg-amber-600/60 text-amber-100 shadow-lg shadow-amber-900/20'}"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline text-amber-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </button>
        <div class="flex items-center gap-1.5">
    `;

    let startPage = Math.max(1, currentPage - 2);
    let endPage = Math.min(totalPages, startPage + 4);

    if (endPage - startPage < 4) {
      startPage = Math.max(1, endPage - 4);
    }

    if (startPage > 1) {
      paginationHTML += `
        <button 
          onclick="changePage(1)" 
          class="w-8 h-8 rounded-md transition-all duration-300 ${1 === currentPage ? 'bg-gradient-to-br from-amber-500 to-amber-700 text-white shadow-lg shadow-amber-900/40 font-bold' : 'bg-gray-800/60 hover:bg-gray-700 text-gray-400 hover:text-amber-200'}"
        >
          1
        </button>
        ${startPage > 2 ? '<span class="px-1 text-gray-600">...</span>' : ''}
      `;
    }

    for (let i = startPage; i <= endPage; i++) {
      paginationHTML += `
        <button 
          onclick="changePage(${i})" 
          class="w-8 h-8 rounded-md transition-all duration-300 ${i === currentPage ? 'bg-gradient-to-br from-amber-500 to-amber-700 text-white shadow-lg shadow-amber-900/40 font-bold' : 'bg-gray-800/60 hover:bg-gray-700 text-gray-400 hover:text-amber-200'}"
        >
          ${i}
        </button>
      `;
    }

    if (endPage < totalPages) {
      paginationHTML += `
        ${endPage < totalPages - 1 ? '<span class="px-1 text-gray-600">...</span>' : ''}
        <button 
          onclick="changePage(${totalPages})" 
          class="w-8 h-8 rounded-md transition-all duration-300 ${totalPages === currentPage ? 'bg-gradient-to-br from-amber-500 to-amber-700 text-white shadow-lg shadow-amber-900/40 font-bold' : 'bg-gray-800/60 hover:bg-gray-700 text-gray-400 hover:text-amber-200'}"
        >
          ${totalPages}
        </button>
      `;
    }

    paginationHTML += `
        </div>
        <button 
          onclick="changePage(${currentPage + 1})" 
          ${currentPage === totalPages ? 'disabled' : ''}
          class="px-3 py-1 rounded-md transition-all duration-300 ${currentPage === totalPages ? 'bg-gray-800/50 text-gray-600 cursor-not-allowed' : 'bg-amber-700/40 hover:bg-amber-600/60 text-amber-100 shadow-lg shadow-amber-900/20'}"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline text-amber-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    `;

    pagination.innerHTML = paginationHTML;
  };

  const updateDisplay = () => {
    const start = (currentPage - 1) * itemsPerPage;
    const end = start + itemsPerPage;
    const pagePlayers = featuredPlayers.slice(start, end);

    const container = document.getElementById('featured-players-container');
    if (container) {
      container.innerHTML = pagePlayers.map(renderPlayerCard).join('');
      // Re-inicializar Alpine.js para los nuevos elementos
      if (window.Alpine) {
        window.Alpine.initTree(container);
      }
    }

    renderPagination();
  };

  window.changePage = (page) => {
    if (page < 1 || page > totalPages) return;
    currentPage = page;
    updateDisplay();
  };
</script>
