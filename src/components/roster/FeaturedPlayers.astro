<div
  class="mb-8 bg-gradient-to-br from-amber-900/20 via-gray-900/40 to-amber-800/10 backdrop-blur-sm border border-amber-600/30 rounded-2xl p-6 sm:p-8 shadow-2xl"
>
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-8 gap-4">
    <div class="flex items-center space-x-3">
      <div
        class="w-12 h-12 bg-gradient-to-br from-amber-500 to-amber-600 rounded-xl flex items-center justify-center shadow-lg"
      >
        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
          ></path>
        </svg>
      </div>
      <div>
        <h2 class="text-2xl sm:text-3xl font-bold text-amber-200 uppercase tracking-wide">
          Jugadores Destacados
        </h2>
        <p class="text-sm text-amber-300/60 mt-0.5">Del mes actual</p>
      </div>
    </div>
    <a
      href="/hall-of-fame"
      class="group flex items-center gap-2 px-4 py-2 bg-amber-600/20 hover:bg-amber-600/30 border border-amber-500/40 hover:border-amber-500/60 rounded-lg text-amber-200 hover:text-amber-100 text-sm font-medium transition-all duration-300"
      title="Ver todos los jugadores destacados"
    >
      <span>Ver Hall of Fame</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 group-hover:translate-x-1 transition-transform"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>

  <div id="featured-players-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
    {
      getPaginatedPlayers().map((player, index) => {
        const playerName = getPlayerName(player);
        const playerData = getPlayerData(playerName);
        if (!playerData) return null;

        const classData = {
          color: playerData.class
            ? defaultClassInfo[playerData.class]?.color || 'FFFFFF'
            : 'FFFFFF',
          name: playerData.class || 'Desconocido',
        };

        const recognitionText = getRecognitionText(player);

        return (
          <div class="group relative bg-gradient-to-br from-gray-900/80 to-gray-800/60 backdrop-blur-sm border border-amber-700/30 rounded-xl p-5 hover:border-amber-500/60 transition-all duration-300 hover:shadow-xl hover:shadow-amber-500/10 hover:-translate-y-1">
            {/* Decorative corner accent */}
            <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-amber-500/10 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-300" />

            <div class="relative">
              {/* Player Header */}
              <div class="flex items-start gap-4 mb-4">
                {/* Avatar with glow effect */}
                <div class="relative flex-shrink-0">
                  <div class="absolute inset-0 bg-gradient-to-br from-amber-500/40 to-amber-600/40 rounded-full blur-md group-hover:blur-lg transition-all duration-300" />
                  <div class="relative w-16 h-16 rounded-full border-3 border-amber-500/60 overflow-hidden shadow-lg">
                    <img
                      src={`/images/avatars/class_${playerData.class || 'default'}.jpg`}
                      alt={playerData.class || 'Clase'}
                      class="w-full h-full object-cover"
                      onError="this.src='/images/avatars/default.png'"
                    />
                  </div>
                  {/* Trophy badge */}
                  <div class="absolute -bottom-1 -right-1 w-7 h-7 bg-gradient-to-br from-amber-400 to-amber-600 rounded-full flex items-center justify-center border-2 border-gray-900 shadow-lg">
                    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  </div>
                </div>

                {/* Player Info */}
                <div class="flex-1 min-w-0">
                  <h3
                    class="text-xl font-bold truncate mb-1 drop-shadow-lg"
                    style={`color: #${classData.color}`}
                  >
                    {playerName}
                  </h3>
                  <div class="flex flex-wrap items-center gap-2">
                    {playerData.rank && (
                      <span class="inline-flex items-center px-2.5 py-1 bg-amber-600/30 border border-amber-500/50 text-amber-200 text-xs font-semibold rounded-full">
                        {playerData.rank}
                      </span>
                    )}
                    <span class="inline-flex items-center px-2.5 py-1 bg-gray-700/50 border border-gray-600/50 text-gray-300 text-xs font-medium rounded-full">
                      {classData.name}
                    </span>
                  </div>
                </div>
              </div>

              {/* Recognition Title */}
              <div class="mb-3 pb-3 border-b border-amber-900/30">
                <div class="flex items-center gap-2">
                  <svg
                    class="w-4 h-4 text-amber-400 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <p class="text-sm font-semibold text-amber-100">{recognitionText}</p>
                </div>
              </div>

              {/* Recognition Details */}
              {player.recognitionIndices?.length > 0 && (
                <div class="space-y-2">
                  {player.recognitionIndices.map((idx: number) => {
                    const recog = recognitions[idx];
                    if (!recog) return null;
                    return (
                      <div class="flex items-start gap-2 text-xs text-amber-100/70 leading-relaxed">
                        <svg
                          class="w-4 h-4 text-amber-400/60 flex-shrink-0 mt-0.5"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <span class="flex-1">{recog.description}</span>
                      </div>
                    );
                  })}
                </div>
              )}
            </div>
          </div>
        );
      })
    }
  </div>

  {
    totalPagesValue > 1 && (
      <div id="featured-players-pagination" class="mt-8">
        {/* Los controles de paginación se generarán con JavaScript */}
      </div>
    )
  }

  {/* Controles de paginación */}
  {
    totalPagesValue > 1 && (
      <div class="flex items-center justify-center gap-2 mt-8">
        <a
          href={currentPageValue > 1 ? `?page=${currentPageValue - 1}` : '#'}
          class={`p-2 rounded-lg transition-all duration-200 ${
            currentPageValue === 1
              ? 'bg-gray-800/50 text-gray-600 cursor-not-allowed'
              : 'bg-amber-600/20 hover:bg-amber-600/30 text-amber-300 hover:text-amber-200 border border-amber-500/30 hover:border-amber-500/50'
          }`}
          aria-disabled={currentPageValue === 1}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        </a>

        <div class="flex items-center gap-1.5">
          {Array.from({ length: Math.min(5, totalPagesValue) }, (_, i) => {
            const pageNum = Math.max(1, Math.min(totalPagesValue - 4, currentPageValue - 2)) + i;
            if (pageNum < 1 || pageNum > totalPagesValue) return null;

            return (
              <a
                href={`?page=${pageNum}`}
                class={`min-w-[2.5rem] h-10 flex items-center justify-center rounded-lg font-semibold text-sm transition-all duration-200 ${
                  pageNum === currentPageValue
                    ? 'bg-gradient-to-br from-amber-500 to-amber-600 text-white shadow-lg shadow-amber-500/30 scale-105'
                    : 'bg-gray-800/50 hover:bg-gray-700/60 text-gray-300 hover:text-white border border-gray-700/50 hover:border-gray-600'
                }`}
              >
                {pageNum}
              </a>
            );
          })}
        </div>

        <a
          href={currentPageValue < totalPagesValue ? `?page=${currentPageValue + 1}` : '#'}
          class={`p-2 rounded-lg transition-all duration-200 ${
            currentPageValue === totalPagesValue
              ? 'bg-gray-800/50 text-gray-600 cursor-not-allowed'
              : 'bg-amber-600/20 hover:bg-amber-600/30 text-amber-300 hover:text-amber-200 border border-amber-500/30 hover:border-amber-500/50'
          }`}
          aria-disabled={currentPageValue === totalPagesValue}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      </div>
    )
  }

  <script is:inline>
    // Manejar la navegación con JavaScript cuando esté disponible
    document.addEventListener('DOMContentLoaded', function () {
      // Función para manejar los clics en los enlaces de paginación
      function handlePaginationClick(event) {
        const link = event.target.closest('a');
        if (!link || link.getAttribute('aria-disabled') === 'true') {
          event.preventDefault();
          return;
        }

        // Obtener el número de página del href
        const url = new URL(link.href);
        const page = parseInt(url.searchParams.get('page') || '1');

        // Actualizar la URL sin recargar la página
        if (window.history.pushState) {
          window.history.pushState({}, '', url);
          // Forzar recarga para ver los cambios
          window.location.reload();
        }
      }

      // Agregar manejadores de eventos a los enlaces de paginación
      document.querySelectorAll('#featured-players-pagination a').forEach((link) => {
        link.addEventListener('click', handlePaginationClick);
      });
    });
  </script>
</div>

