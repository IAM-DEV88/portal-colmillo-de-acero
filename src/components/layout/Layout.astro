---
import '../../styles/global.css';
import Navigation from './Navigation.astro';
import Footer from './Footer.astro';

interface Props {
  title?: string;
}

const { title = 'Colmillo de Acero' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Colmillo de Acero - Hermandad de World of Warcraft enfocada en el contenido PvE de alta dificultad" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <title>{title} | Colmillo de Acero</title>
    
    <!-- Hide Astro dev toolbar in development -->
    {import.meta.env.DEV && (
      <style>
        astro-dev-toolbar {
          display: none !important;
        }
      </style>
    )}
    
    <style is:inline>
      html {
        scroll-behavior: smooth;
      }
      
      ::selection {
        background: var(--color-accent);
      }
      
      *:focus {
        outline: 2px solid var(--color-accent);
        outline-offset: 2px;
      }
    </style>
  </head>
  <body class="bg-cover bg-fixed bg-center bg-no-repeat overflow-x-hidden w-full" style="background-image: url('/images/background.jpg');">
      <Navigation />
      <main class="min-h-screen relative z-10 mt-8 pb-32 w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <slot />
      </main>
      
      <Footer />
  </body>
</html>
